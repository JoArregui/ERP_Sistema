@if (isVisible)
{
    <div class="fixed top-5 right-5 z-[100] animate-bounce-in">
        <div class="bg-slate-900 text-white px-6 py-4 rounded-2xl shadow-2xl border border-slate-700 flex items-center gap-4 backdrop-blur-md bg-opacity-95">
            <div class="bg-emerald-500 p-2 rounded-full shadow-lg shadow-emerald-500/20">
                <i class="bi bi-arrow-repeat text-white"></i>
            </div>
            <div>
                <p class="text-[10px] font-black uppercase tracking-[0.2em] opacity-50">Sincronización</p>
                <p class="font-bold text-sm">@Mensaje</p>
            </div>
        </div>
    </div>
}

<style>
    .animate-bounce-in {
        animation: slideIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    @@keyframes slideIn {
        from { transform: translateX(120%); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }
</style>

@code {
    private bool isVisible = false;
    private string Mensaje = "";

    /// <summary>
    /// Muestra la notificación con un mensaje personalizado.
    /// </summary>
    public async Task Show(string mensaje)
    {
        Mensaje = mensaje;
        isVisible = true;
        StateHasChanged();

        // Se mantiene visible 4 segundos y desaparece
        await Task.Delay(4000);
        
        isVisible = false;
        StateHasChanged();
    }
}