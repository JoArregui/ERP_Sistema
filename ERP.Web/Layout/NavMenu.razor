@* NavMenu.razor *@
<div class="flex flex-col h-full bg-[#111827] text-slate-400 font-sans shadow-2xl">
    
    @* LOGO *@
    <div class="p-6 mb-4 border-b border-slate-800">
        <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-blue-600 rounded flex items-center justify-center text-white font-black shadow-lg shadow-blue-900/50">
                E
            </div>
            <span class="text-white font-black tracking-tighter text-xl uppercase">SISTEMA <span class="text-blue-500">ERP</span></span>
        </div>
    </div>

    @* NAVEGACIÓN *@
    <nav class="flex-1 px-4 space-y-1 overflow-y-auto">
        
        @* SECCIÓN: DASHBOARD *@
        <div class="pb-2 px-3">
            <span class="text-[10px] font-black text-slate-500 uppercase tracking-widest">General</span>
        </div>

        @* Escritorio *@
        <NavLink class="flex items-center gap-3 p-3 rounded-lg transition-all group hover:bg-blue-600 hover:text-white no-underline" 
                 href="" Match="NavLinkMatch.All" ActiveClass="bg-blue-600 text-white font-bold shadow-lg">
            <span class="text-sm">🏠</span>
            <span class="text-xs uppercase tracking-widest">Escritorio</span>
        </NavLink>

        @* Mi Agenda *@
        <NavLink class="flex items-center gap-3 p-3 rounded-lg transition-all group hover:bg-blue-600 hover:text-white no-underline" 
                 href="agenda" ActiveClass="bg-blue-600 text-white font-bold shadow-lg">
            <span class="text-sm">📅</span>
            <span class="text-xs uppercase tracking-widest">Mi Agenda</span>
        </NavLink>

        @* Control Llamadas *@
        <NavLink class="flex items-center gap-3 p-3 rounded-lg transition-all group hover:bg-blue-600 hover:text-white no-underline" 
                 href="llamadas" ActiveClass="bg-blue-600 text-white font-bold shadow-lg">
            <span class="text-sm">📞</span>
            <span class="text-xs uppercase tracking-widest">Control Llamadas</span>
        </NavLink>

        @* SECCIÓN: ADMINISTRACIÓN *@
        <div class="pt-6 pb-2 border-t border-slate-800 mt-4 px-3">
            <span class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Administración</span>
        </div>

        @* Ventas / Facturas *@
        <NavLink class="flex items-center gap-3 p-3 rounded-lg transition-all group hover:bg-blue-600 hover:text-white no-underline" 
                 href="nueva-operacion" ActiveClass="bg-blue-600 text-white font-bold shadow-lg">
            <span class="text-sm">🧾</span>
            <span class="text-xs uppercase tracking-widest">Ventas / Facturas</span>
        </NavLink>

        @* Compras / Gastos *@
        <NavLink class="flex items-center gap-3 p-3 rounded-lg transition-all group hover:bg-blue-600 hover:text-white no-underline" 
                 href="compras" ActiveClass="bg-blue-600 text-white font-bold shadow-lg">
            <span class="text-sm">🛒</span>
            <span class="text-xs uppercase tracking-widest">Compras / Gastos</span>
        </NavLink>

        @* SECCIÓN: MAESTROS (DATOS BASE) *@
        <div class="pt-6 pb-2 border-t border-slate-800 mt-4 px-3">
            <span class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Maestros</span>
        </div>

        @* Mi Empresa *@
        <NavLink class="flex items-center gap-3 p-3 rounded-lg transition-all group hover:bg-blue-600 hover:text-white no-underline" 
                 href="maestros/empresa" ActiveClass="bg-blue-600 text-white font-bold shadow-lg">
            <span class="text-sm">🏢</span>
            <span class="text-xs uppercase tracking-widest">Mi Empresa</span>
        </NavLink>

        @* Clientes *@
        <NavLink class="flex items-center gap-3 p-3 rounded-lg transition-all group hover:bg-blue-600 hover:text-white no-underline" 
                 href="maestros/clientes" ActiveClass="bg-blue-600 text-white font-bold shadow-lg">
            <span class="text-sm">👥</span>
            <span class="text-xs uppercase tracking-widest">Clientes</span>
        </NavLink>

        @* Artículos *@
        <NavLink class="flex items-center gap-3 p-3 rounded-lg transition-all group hover:bg-blue-600 hover:text-white no-underline" 
                 href="maestros/articulos" ActiveClass="bg-blue-600 text-white font-bold shadow-lg">
            <span class="text-sm">📦</span>
            <span class="text-xs uppercase tracking-widest">Artículos</span>
        </NavLink>

        @* Proveedores *@
        <NavLink class="flex items-center gap-3 p-3 rounded-lg transition-all group hover:bg-blue-600 hover:text-white no-underline" 
                 href="maestros/proveedores" ActiveClass="bg-blue-600 text-white font-bold shadow-lg">
            <span class="text-sm">🚚</span>
            <span class="text-xs uppercase tracking-widest">Proveedores</span>
        </NavLink>

    </nav>

    @* FOOTER / AJUSTES *@
    <div class="p-4 border-t border-slate-800 bg-[#0f172a]">
        <NavLink class="flex items-center gap-3 p-2 rounded-lg text-slate-500 hover:text-white transition-all no-underline" 
                 href="configuracion">
            <span class="text-sm">⚙️</span>
            <span class="text-[10px] uppercase font-bold tracking-widest">Configuración</span>
        </NavLink>
    </div>
</div>