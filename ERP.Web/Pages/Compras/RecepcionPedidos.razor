@page "/compras/recepcion"
@using ERP.Domain.Entities
@using ERP.Web.Services
@inject ComprasWebService ComprasService
@inject IJSRuntime JS

<PageTitle>Recepción de Pedidos | ERP</PageTitle>

<div class="container-fluid position-relative p-4 animate__animated animate__fadeIn">
    @* --- SISTEMA DE NOTIFICACIONES (TOAST) --- *@
    <div class="position-fixed top-0 end-0 p-4" style="z-index: 9999;">
        @if (mostrarToast)
        {
            <div class="bg-slate-900 text-white p-4 rounded-2xl shadow-2xl border-l-4 border-blue-500 animate__animated animate__fadeInRight" style="min-width: 320px;">
                <div class="d-flex align-items-center">
                    <div class="bg-blue-500 p-2 rounded-lg me-3">
                        <i class="bi bi-check2-all text-white fs-5"></i>
                    </div>
                    <div>
                        <p class="font-black text-[10px] uppercase tracking-widest mb-0 text-blue-400">Operación Exitosa</p>
                        <p class="text-sm text-slate-300 mb-0 font-medium">Inventario y PMP actualizados.</p>
                    </div>
                </div>
            </div>
        }
    </div>

    @* --- CABECERA --- *@
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="text-4xl font-black text-slate-900 tracking-tighter italic uppercase mb-0">RECEPCIÓN DE MERCANCÍA</h1>
            <div class="flex items-center gap-2 mt-1">
                <span class="h-2 w-2 rounded-full bg-blue-600 animate-pulse"></span>
                <p class="text-slate-500 text-[10px] font-bold uppercase tracking-widest mb-0">Control de entradas y muelles de carga</p>
            </div>
        </div>
        <div class="flex gap-2">
            <button class="px-5 py-2 bg-white border border-slate-200 text-slate-700 text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-slate-50 transition-all shadow-sm" @onclick="CargarDatos">
                <i class="bi bi-arrow-clockwise me-1"></i> Sincronizar
            </button>
        </div>
    </div>

    @if (pedidos == null)
    {
        <div class="d-flex flex-column align-items-center justify-content-center my-5 p-20">
            <div class="spinner-border text-blue-600 mb-4" role="status" style="width: 3rem; height: 3rem;"></div>
            <p class="text-slate-400 font-bold text-xs uppercase tracking-widest animate-pulse">Buscando documentos pendientes...</p>
        </div>
    }
    else if (!pedidos.Any())
    {
        <div class="bg-slate-50 border-2 border-dashed border-slate-200 rounded-[3rem] p-20 text-center my-5">
            <div class="w-20 h-20 bg-white rounded-3xl flex items-center justify-center mx-auto mb-4 shadow-sm text-slate-300">
                <i class="bi bi-box-seam fs-1"></i>
            </div>
            <h3 class="text-slate-800 font-black uppercase text-sm mb-2">Todo en orden</h3>
            <p class="text-slate-400 font-medium text-xs mb-0">No hay pedidos pendientes de recepción en este momento.</p>
        </div>
    }
    else
    {
        <div class="bg-white rounded-[2.5rem] shadow-xl border border-slate-100 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-slate-900 text-white text-[10px] uppercase font-bold tracking-widest">
                        <tr>
                            <th class="px-6 py-5 border-0">Fecha Pedido</th>
                            <th class="px-6 py-5 border-0">Nº Documento</th>
                            <th class="px-6 py-5 border-0">Proveedor</th>
                            <th class="px-6 py-5 border-0 text-end">Importe Neto</th>
                            <th class="px-6 py-5 border-0 text-center">Gestión</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        @foreach (var pedido in pedidos)
                        {
                            <tr class="hover:bg-blue-50/40 transition-colors group">
                                <td class="px-6 py-4 text-sm font-bold text-slate-500">@pedido.Fecha.ToShortDateString()</td>
                                <td class="px-6 py-4">
                                    <span class="px-3 py-1 bg-blue-50 text-blue-600 rounded-lg border border-blue-100 font-mono text-xs font-black">
                                        @pedido.NumeroDocumento
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="font-black text-slate-800 uppercase text-xs">@(pedido.Proveedor?.RazonSocial ?? "Proveedor General")</div>
                                    <div class="text-[9px] text-slate-400 font-bold tracking-widest">ID: @pedido.ProveedorId</div>
                                </td>
                                <td class="px-6 py-4 text-end font-black text-slate-900">
                                    @pedido.Total.ToString("C2")
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <button class="px-4 py-2 bg-slate-900 text-white rounded-xl text-[9px] font-black uppercase tracking-widest hover:bg-blue-600 transition-all shadow-lg shadow-blue-900/10" 
                                            @onclick="() => PrepararRecepcion(pedido)">
                                        Validar Mercancía
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@* --- MODAL DE VALIDACIÓN --- *@
@if (mostrarModal)
{
    <div class="modal fade show d-block animate__animated animate__fadeIn" tabindex="-1" style="background-color: rgba(15, 23, 42, 0.9); backdrop-filter: blur(8px);">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content border-0 shadow-2xl rounded-[2.5rem] overflow-hidden">
                <div class="modal-header bg-slate-900 text-white border-0 py-5 px-5">
                    <div>
                        <h5 class="modal-title font-black italic tracking-tighter uppercase mb-0">Detalle de Mercancía Recibida</h5>
                        <p class="text-blue-400 text-[9px] font-bold uppercase tracking-widest mb-0">Verifique las cantidades antes de confirmar</p>
                    </div>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                </div>
                
                <div class="modal-body p-5">
                    <div class="border border-slate-100 rounded-[2rem] overflow-hidden bg-white shadow-sm mb-6">
                        <table class="table table-sm mb-0">
                            <thead class="bg-slate-50">
                                <tr class="text-[9px] uppercase text-slate-400 font-black tracking-widest">
                                    <th class="px-4 py-4">Referencia / Descripción</th>
                                    <th class="text-center py-4">Cantidad</th>
                                    <th class="text-end px-4 py-4">Precio Pactado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var linea in pedidoSeleccionado?.Lineas ?? new List<DocumentoLinea>())
                                {
                                    <tr class="border-bottom border-slate-50">
                                        <td class="px-4 py-3">
                                            <div class="font-black text-slate-800 uppercase text-xs">@(linea.Articulo?.Descripcion ?? "Desconocido")</div>
                                            <div class="font-mono text-[9px] text-blue-500 font-bold">SKU: @(linea.Articulo?.Codigo ?? "N/A")</div>
                                        </td>
                                        <td class="text-center py-3">
                                            <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-lg text-xs font-black">@linea.Cantidad</span>
                                        </td>
                                        <td class="text-end px-4 py-3 text-xs font-bold text-slate-600">@linea.PrecioUnitario.ToString("N2")€</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="form-group">
                        <label class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-2 d-block px-1">Referencia del Albarán (Proveedor)</label>
                        <div class="relative">
                             <input type="text" class="form-control form-control-lg rounded-2xl border-2 border-slate-100 text-sm font-bold p-4 shadow-sm focus:border-blue-500 focus:ring-0 transition-all" 
                               @bind="numeroAlbaran" placeholder="Ej: ALB-2024-001" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer border-0 p-5 bg-slate-50/50 flex justify-between">
                    <button type="button" class="px-4 py-2 text-slate-400 font-black text-[10px] uppercase tracking-widest hover:text-slate-600 transition" @onclick="CerrarModal">Cancelar</button>
                    <button type="button" class="px-10 py-3 bg-blue-600 text-white rounded-2xl text-[10px] font-black uppercase tracking-widest shadow-xl shadow-blue-900/20 @(string.IsNullOrWhiteSpace(numeroAlbaran) ? "opacity-50" : "hover:bg-blue-700 hover:-translate-y-1") transition-all" 
                            disabled="@string.IsNullOrWhiteSpace(numeroAlbaran)"
                            @onclick="ConfirmarRecepcion">
                        Confirmar Entrada y Actualizar Stock
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<DocumentoComercial>? pedidos;
    private bool mostrarModal = false;
    private bool mostrarToast = false;
    private DocumentoComercial? pedidoSeleccionado;
    private string numeroAlbaran = string.Empty;

    protected override async Task OnInitializedAsync() => await CargarDatos();

    private async Task CargarDatos() 
    {
        pedidos = null;
        StateHasChanged();
        pedidos = await ComprasService.GetPedidosPendientes();
    }

    private void PrepararRecepcion(DocumentoComercial pedido)
    {
        pedidoSeleccionado = pedido;
        numeroAlbaran = string.Empty;
        mostrarModal = true;
    }

    private void CerrarModal()
    {
        mostrarModal = false;
        pedidoSeleccionado = null;
    }

    private async Task ConfirmarRecepcion()
    {
        if (pedidoSeleccionado != null && !string.IsNullOrWhiteSpace(numeroAlbaran))
        {
            var exito = await ComprasService.RecepcionarPedido(pedidoSeleccionado.Id, numeroAlbaran);
            if (exito) 
            {
                CerrarModal();
                await CargarDatos();
                await LanzarNotificacion();
            }
        }
    }

    private async Task LanzarNotificacion()
    {
        mostrarToast = true;
        StateHasChanged();
        await Task.Delay(3000);
        mostrarToast = false;
        StateHasChanged();
    }
}