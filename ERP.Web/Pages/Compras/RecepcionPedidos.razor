@page "/compras/recepcion"
@using ERP.Domain.Entities
@using ERP.Web.Services
@inject ComprasWebService ComprasService
@inject IJSRuntime JS

<PageTitle>Recepción de Pedidos</PageTitle>

<div class="container-fluid position-relative">
    @* --- SISTEMA DE NOTIFICACIONES (TOAST) --- *@
    <div class="position-fixed top-0 end-0 p-4" style="z-index: 9999;">
        @if (mostrarToast)
        {
            <div class="bg-slate-900 text-white p-4 rounded-2xl shadow-2xl border-l-4 border-blue-500 animate__animated animate__fadeInRight" style="min-width: 320px;">
                <div class="d-flex align-items-center">
                    <div class="bg-blue-500 p-2 rounded-lg me-3">
                        <i class="bi bi-check2-all text-white fs-5"></i>
                    </div>
                    <div>
                        <p class="font-black text-[10px] uppercase tracking-widest mb-0 text-blue-400">Operación Exitosa</p>
                        <p class="text-sm text-slate-300 mb-0 font-medium">Inventario y PMP actualizados.</p>
                    </div>
                </div>
            </div>
        }
    </div>

    @* --- CABECERA --- *@
    <div class="d-flex justify-content-between align-items-center my-4">
        <div>
            <h1 class="text-3xl font-black text-slate-900 tracking-tighter italic uppercase mb-0">RECEPCIÓN DE MERCANCÍA</h1>
            <p class="text-slate-500 text-xs font-mono uppercase tracking-widest">Control de entradas de proveedor</p>
        </div>
        <button class="btn btn-outline-secondary btn-sm rounded-xl px-3" @onclick="CargarDatos">
            <i class="bi bi-arrow-clockwise me-1"></i> Sincronizar
        </button>
    </div>

    @if (pedidos == null)
    {
        <div class="d-flex flex-column align-items-center justify-content-center my-5">
            <div class="spinner-border text-primary mb-3" role="status"></div>
            <p class="text-slate-400 font-bold text-xs uppercase tracking-widest">Buscando documentos pendientes...</p>
        </div>
    }
    else if (!pedidos.Any())
    {
        <div class="bg-slate-50 border-2 border-dashed border-slate-200 rounded-3xl p-5 text-center my-5">
            <i class="bi bi-box-seam text-slate-300 fs-1 mb-3 d-block"></i>
            <p class="text-slate-500 font-bold mb-0">No hay pedidos pendientes de recepción.</p>
        </div>
    }
    else
    {
        <div class="bg-white rounded-3xl shadow-xl border border-slate-200 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-slate-900 text-white text-[10px] uppercase font-bold tracking-widest">
                        <tr>
                            <th class="px-6 py-4">Fecha</th>
                            <th class="px-6 py-4">Nº Pedido</th>
                            <th class="px-6 py-4">Proveedor</th>
                            <th class="px-6 py-4 text-end">Importe</th>
                            <th class="px-6 py-4 text-center">Acción</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        @foreach (var pedido in pedidos)
                        {
                            <tr class="hover:bg-blue-50/30 transition-colors">
                                <td class="px-6 py-4 text-sm text-slate-600">@pedido.Fecha.ToShortDateString()</td>
                                <td class="px-6 py-4 font-mono text-xs">
                                    <span class="px-2 py-1 bg-blue-50 text-blue-600 rounded-md border border-blue-100 font-bold">@pedido.NumeroDocumento</span>
                                </td>
                                <td class="px-6 py-4 font-bold text-slate-800">
                                    @(pedido.Proveedor?.RazonSocial ?? "Proveedor General")
                                </td>
                                <td class="px-6 py-4 text-end font-black text-slate-900">
                                    @pedido.Total.ToString("C2")
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <button class="px-4 py-2 bg-slate-900 text-white rounded-xl text-[10px] font-black uppercase tracking-widest hover:bg-blue-600 transition-all shadow-lg shadow-slate-200" 
                                            @onclick="() => PrepararRecepcion(pedido)">
                                        Validar Entrada
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@* --- MODAL DE VALIDACIÓN DE LÍNEAS --- *@
@if (mostrarModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(15, 23, 42, 0.8); backdrop-filter: blur(12px);">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content border-0 shadow-2xl rounded-3xl overflow-hidden">
                <div class="modal-header bg-slate-900 text-white border-0 py-4 px-5">
                    <h5 class="modal-title font-black italic tracking-tighter uppercase mb-0">Detalle de Mercancía</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                </div>
                
                <div class="modal-body p-5">
                    <div class="border rounded-2xl overflow-hidden bg-white shadow-sm mb-4">
                        <table class="table table-sm mb-0">
                            <thead class="bg-slate-50">
                                <tr class="text-[10px] uppercase text-slate-500 font-bold">
                                    <th class="px-4 py-3">Referencia y Artículo</th>
                                    <th class="text-center py-3">Cant. Pedida</th>
                                    <th class="text-end px-4 py-3">Coste Ref.</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var linea in pedidoSeleccionado?.Lineas ?? new List<DocumentoLinea>())
                                {
                                    <tr class="border-bottom">
                                        <td class="px-4 py-3 text-sm">
                                            <div class="fw-bold text-slate-800">@(linea.Articulo?.Descripcion ?? "Desconocido")</div>
                                            <div class="font-mono text-[10px] text-blue-500 font-bold">SKU: @(linea.Articulo?.Codigo ?? "N/A")</div>
                                        </td>
                                        <td class="text-center py-3">
                                            <span class="px-3 py-1 bg-slate-100 rounded-full text-xs font-black">@linea.Cantidad</span>
                                        </td>
                                        <td class="text-end px-4 py-3 text-sm font-bold">@linea.PrecioUnitario.ToString("N2")€</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="form-group mt-4">
                        <label class="text-[10px] font-black uppercase tracking-widest text-blue-600 mb-2 d-block">Número de Albarán del Proveedor</label>
                        <input type="text" class="form-control form-control-lg rounded-2xl border-2 border-slate-100 text-sm font-bold p-4 shadow-sm focus:border-blue-500 focus:ring-0" 
                               @bind="numeroAlbaran" placeholder="Escriba el número del albarán..." />
                    </div>
                </div>

                <div class="modal-footer border-0 p-5 bg-slate-50/80">
                    <button type="button" class="px-4 py-2 text-slate-500 font-bold text-xs uppercase" @onclick="CerrarModal">Cancelar</button>
                    <button type="button" class="px-8 py-3 bg-blue-600 text-white rounded-2xl text-xs font-black uppercase tracking-widest shadow-xl @(string.IsNullOrWhiteSpace(numeroAlbaran) ? "opacity-50" : "hover:bg-blue-700")" 
                            disabled="@string.IsNullOrWhiteSpace(numeroAlbaran)"
                            @onclick="ConfirmarRecepcion">
                        Confirmar Entrada Total
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<DocumentoComercial>? pedidos;
    private bool mostrarModal = false;
    private bool mostrarToast = false;
    private DocumentoComercial? pedidoSeleccionado;
    private string numeroAlbaran = string.Empty;

    protected override async Task OnInitializedAsync() => await CargarDatos();

    private async Task CargarDatos() => pedidos = await ComprasService.GetPedidosPendientes();

    private void PrepararRecepcion(DocumentoComercial pedido)
    {
        pedidoSeleccionado = pedido;
        numeroAlbaran = string.Empty;
        mostrarModal = true;
    }

    private void CerrarModal()
    {
        mostrarModal = false;
        pedidoSeleccionado = null;
    }

    private async Task ConfirmarRecepcion()
    {
        if (pedidoSeleccionado != null && !string.IsNullOrWhiteSpace(numeroAlbaran))
        {
            var exito = await ComprasService.RecepcionarPedido(pedidoSeleccionado.Id, numeroAlbaran);
            if (exito) 
            {
                CerrarModal();
                await CargarDatos();
                await LanzarNotificacion();
            }
        }
    }

    private async Task LanzarNotificacion()
    {
        mostrarToast = true;
        StateHasChanged();
        await Task.Delay(3000);
        mostrarToast = false;
        StateHasChanged();
    }
}