@page "/compras/dashboard"
@using ERP.Domain.DTOs
@inject HttpClient Http

<div class="p-8 bg-slate-50 min-h-screen">
    <div class="flex justify-between items-end mb-8">
        <div>
            <h1 class="text-4xl font-black text-slate-900 tracking-tighter italic">CONTROL DE SUMINISTROS</h1>
            <p class="text-slate-500 font-medium">Asistente inteligente de reposición de stock</p>
        </div>
        <div class="bg-white px-6 py-3 rounded-2xl shadow-sm border border-slate-200">
            <span class="text-xs font-bold text-slate-400 uppercase block">Alertas Críticas</span>
            <span class="text-2xl font-black text-rose-600">@Alertas?.Count()</span>
        </div>
    </div>

    @if (Alertas == null)
    {
        <div class="flex justify-center p-20"><div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div></div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var item in Alertas)
            {
                <div class="bg-white rounded-[2rem] p-6 shadow-xl border border-slate-100 hover:border-blue-400 transition-all group">
                    <div class="flex justify-between items-start mb-4">
                        <span class="px-3 py-1 bg-rose-100 text-rose-600 rounded-full text-[10px] font-black uppercase">Stock Crítico</span>
                        <span class="font-mono text-xs text-slate-400">#@item.Codigo</span>
                    </div>
                    
                    <h3 class="text-xl font-bold text-slate-800 mb-1 group-hover:text-blue-600">@item.Descripcion</h3>
                    <p class="text-sm text-slate-500 mb-6">Proveedor: <span class="font-bold text-slate-700">@item.ProveedorNombre</span></p>

                    <div class="grid grid-cols-2 gap-4 mb-6 bg-slate-50 p-4 rounded-2xl">
                        <div>
                            <span class="text-[10px] uppercase font-bold text-slate-400 block">Actual</span>
                            <span class="text-xl font-black text-slate-700">@item.StockActual.ToString("N0")</span>
                        </div>
                        <div>
                            <span class="text-[10px] uppercase font-bold text-slate-400 block">Mínimo</span>
                            <span class="text-xl font-black text-slate-700">@item.StockMinimo.ToString("N0")</span>
                        </div>
                    </div>

                    <button class="w-full py-4 bg-slate-900 text-white rounded-xl font-bold hover:bg-blue-600 transition-colors flex items-center justify-center gap-2">
                        <i class="oi oi-cart"></i> Generar Pedido (@item.CantidadSugerida.ToString("N0") uds)
                    </button>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<AlertaStockDTO>? Alertas;

    protected override async Task OnInitializedAsync()
    {
        Alertas = await Http.GetFromJsonAsync<List<AlertaStockDTO>>("api/articulos/alertas-reposicion");
    }
}