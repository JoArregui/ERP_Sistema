@page "/compras"
@using ERP.Domain.DTOs
@inject HttpClient Http

<div class="p-8 bg-slate-50 min-h-screen animate__animated animate__fadeIn">
    @* --- CABECERA --- *@
    <div class="flex justify-between items-end mb-10">
        <div>
            <h1 class="text-5xl font-black text-slate-900 tracking-tighter italic uppercase">Gestión de Suministros</h1>
            <div class="flex items-center gap-2 mt-2">
                <span class="bg-blue-600 text-white text-[9px] font-black px-2 py-0.5 rounded uppercase tracking-widest">Smart AI</span>
                <p class="text-slate-500 font-bold text-xs uppercase tracking-widest">Asistente de reposición automática</p>
            </div>
        </div>
        <div class="bg-white px-8 py-4 rounded-[2rem] shadow-xl border border-slate-100 flex items-center gap-4">
            <div class="w-12 h-12 bg-rose-50 rounded-2xl flex items-center justify-center text-rose-600">
                <i class="bi bi-exclamation-triangle-fill fs-4"></i>
            </div>
            <div>
                <span class="text-[10px] font-black text-slate-400 uppercase block tracking-widest">Alertas de Stock</span>
                <span class="text-3xl font-black text-rose-600 leading-none">@Alertas?.Count()</span>
            </div>
        </div>
    </div>

    @if (Alertas == null)
    {
        <div class="flex flex-col items-center justify-center p-20 text-center">
            <div class="animate-spin rounded-full h-16 w-16 border-b-4 border-blue-600 mb-4"></div>
            <p class="text-slate-400 font-black text-xs uppercase tracking-widest">Analizando inventario...</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var item in Alertas)
            {
                <div class="bg-white rounded-[2.5rem] p-8 shadow-xl border border-slate-100 hover:border-blue-400 hover:-translate-y-2 transition-all duration-300 group">
                    <div class="flex justify-between items-start mb-6">
                        <div class="flex flex-col gap-1">
                            <span class="px-3 py-1 bg-rose-100 text-rose-600 rounded-lg text-[9px] font-black uppercase w-fit border border-rose-200">Bajo Mínimos</span>
                            <span class="font-mono text-[10px] text-slate-300 font-bold uppercase mt-1">Ref: @item.Codigo</span>
                        </div>
                        <div class="w-10 h-10 bg-slate-50 rounded-xl flex items-center justify-center text-slate-300 group-hover:bg-blue-600 group-hover:text-white transition-all">
                            <i class="bi bi-box-fill"></i>
                        </div>
                    </div>
                    
                    <h3 class="text-xl font-black text-slate-800 mb-2 uppercase tracking-tight group-hover:text-blue-600 transition-colors">@item.Descripcion</h3>
                    <p class="text-[11px] text-slate-400 font-bold uppercase tracking-widest mb-8">
                        Proveedor: <span class="text-slate-900 underline">@item.ProveedorNombre</span>
                    </p>

                    <div class="grid grid-cols-2 gap-4 mb-8 bg-slate-50/50 p-5 rounded-3xl border border-slate-50">
                        <div>
                            <span class="text-[9px] uppercase font-black text-slate-400 block tracking-widest mb-1">Stock Actual</span>
                            <div class="flex items-baseline gap-1">
                                <span class="text-2xl font-black text-slate-800">@item.StockActual.ToString("N0")</span>
                                <span class="text-[10px] font-bold text-slate-400 uppercase">uds</span>
                            </div>
                        </div>
                        <div class="border-l border-slate-200 pl-4">
                            <span class="text-[9px] uppercase font-black text-slate-400 block tracking-widest mb-1">Mínimo</span>
                            <div class="flex items-baseline gap-1">
                                <span class="text-2xl font-black text-slate-400">@item.StockMinimo.ToString("N0")</span>
                                <span class="text-[10px] font-bold text-slate-400 uppercase">uds</span>
                            </div>
                        </div>
                    </div>

                    <button class="w-full py-4 bg-slate-900 text-white rounded-2xl font-black text-xs uppercase tracking-widest hover:bg-blue-600 shadow-xl shadow-slate-900/10 transition-all flex items-center justify-center gap-3">
                        <i class="bi bi-cart-plus-fill fs-5"></i> Generar Pedido (@item.CantidadSugerida.ToString("N0") uds)
                    </button>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<AlertaStockDTO>? Alertas;

    protected override async Task OnInitializedAsync()
    {
        try {
            Alertas = await Http.GetFromJsonAsync<List<AlertaStockDTO>>("api/articulos/alertas-reposicion");
        } catch {
            Alertas = new List<AlertaStockDTO>(); // Evitar null en caso de error de API
        }
    }
}