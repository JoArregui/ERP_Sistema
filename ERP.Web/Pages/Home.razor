@page "/"
@inject NavigationManager Navigation

@* Nota: El script de Tailwind se incluye aquí para asegurar que los estilos 
   se apliquen correctamente incluso si hay cambios en el index.html.
*@
<script src="https://cdn.tailwindcss.com"></script>

<div class="max-w-[1400px] mx-auto space-y-8 animate-in fade-in duration-500">
    
    @* --- CABECERA CON BOTONES NAVEGABLES --- *@
    <div class="flex flex-col md:flex-row justify-between items-center bg-white p-8 rounded-lg shadow-md border border-slate-200 gap-6">
        <div>
            <h1 class="text-4xl font-black text-slate-900 uppercase tracking-tighter">Escritorio Principal</h1>
            <p class="text-slate-500 text-lg font-medium italic">Gestión operativa y control de tareas del sistema</p>
        </div>
        <div class="flex gap-4">
            @* Botón de Configuración *@
            <NavLink href="configuracion" class="bg-slate-700 hover:bg-slate-800 text-white px-8 py-4 rounded-md font-bold text-xs transition shadow-lg border-b-4 border-slate-900 no-underline text-center">
                CONFIGURACIÓN
            </NavLink>
            
            @* Botón Nueva Operación - Azul fuerte para máxima legibilidad *@
            <NavLink href="nueva-operacion" class="bg-blue-800 hover:bg-blue-900 text-white px-10 py-4 rounded-md font-bold text-xs transition shadow-xl border-b-4 border-blue-950 no-underline text-center">
                + NUEVA OPERACIÓN
            </NavLink>
        </div>
    </div>

    @* --- INDICADORES DE GESTIÓN (KPIs) --- *@
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg border-l-8 border-blue-600 shadow-sm">
            <span class="text-xs font-black text-slate-400 uppercase tracking-widest">Facturación Total</span>
            <p class="text-3xl font-mono font-bold text-slate-800 mt-1">14.250,00 €</p>
        </div>
        <div class="bg-white p-6 rounded-lg border-l-8 border-red-600 shadow-sm">
            <span class="text-xs font-black text-slate-400 uppercase tracking-widest">Gastos Mensuales</span>
            <p class="text-3xl font-mono font-bold text-red-700 mt-1">8.900,45 €</p>
        </div>
        <div class="bg-white p-6 rounded-lg border-l-8 border-green-600 shadow-sm">
            <span class="text-xs font-black text-slate-400 uppercase tracking-widest">Resultado Bruto</span>
            <p class="text-3xl font-mono font-bold text-green-700 mt-1">+5.349,55 €</p>
        </div>
    </div>

    @* --- CUERPO: AGENDA Y CONTROL DE LLAMADAS --- *@
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        
        @* Módulo de Agenda *@
        <div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
            <div class="bg-slate-900 text-white px-6 py-4 font-black text-sm uppercase flex justify-between items-center">
                <span>📅 Mi Agenda para hoy</span>
                <NavLink href="agenda" class="text-blue-400 text-xs hover:underline uppercase">Ver Todo</NavLink>
            </div>
            <div class="p-6 space-y-4">
                <div class="flex items-center gap-4 p-4 bg-blue-50 rounded border-l-4 border-blue-600">
                    <span class="font-mono font-bold text-blue-700 bg-blue-100 px-2 py-1 rounded text-xs">09:00</span>
                    <span class="font-bold text-slate-800">Reunión de equipo - Revisión Ventas</span>
                </div>
                <div class="flex items-center gap-4 p-4 bg-slate-50 rounded border-l-4 border-slate-300">
                    <span class="font-mono font-bold text-slate-500 bg-slate-200 px-2 py-1 rounded text-xs">11:30</span>
                    <span class="font-bold text-slate-800 uppercase tracking-tight">Visita Cliente: Comercial Arandina S.L.</span>
                </div>
            </div>
        </div>

        @* Módulo de Control de Llamadas *@
        <div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
            <div class="bg-slate-900 text-white px-6 py-4 font-black text-sm uppercase flex justify-between items-center">
                <span>📞 Control de Llamadas</span>
                <span class="bg-red-600 text-white px-3 py-1 rounded text-[10px] font-black italic">2 URGENTES</span>
            </div>
            <div class="p-0">
                <table class="w-full text-left">
                    <tbody class="divide-y divide-slate-100">
                        <tr class="hover:bg-slate-50 transition">
                            <td class="px-6 py-4 font-bold text-slate-700 text-sm uppercase tracking-tighter">Construcciones Ruiz S.A.</td>
                            <td class="px-6 py-4 text-right">
                                <button class="bg-green-700 hover:bg-green-800 text-white px-4 py-2 rounded text-[10px] font-black transition uppercase">
                                    Llamar ahora
                                </button>
                            </td>
                        </tr>
                        <tr class="hover:bg-slate-50 transition">
                            <td class="px-6 py-4 font-bold text-slate-700 text-sm uppercase tracking-tighter">Proveedor Metales S.L.</td>
                            <td class="px-6 py-4 text-right">
                                <button class="bg-green-700 hover:bg-green-800 text-white px-4 py-2 rounded text-[10px] font-black transition uppercase">
                                    Llamar ahora
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @* --- TABLA DE DOCUMENTOS RECIENTES --- *@
    <div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
        <div class="bg-slate-50 px-6 py-4 border-b border-slate-200">
            <h3 class="text-sm font-black text-slate-800 uppercase tracking-widest">Últimos Documentos Registrados</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm font-mono">
                <thead class="bg-slate-100 text-slate-500">
                    <tr>
                        <th class="px-6 py-3 font-bold uppercase text-[11px]">Ref.</th>
                        <th class="px-6 py-3 font-bold uppercase text-[11px]">Entidad / Cliente</th>
                        <th class="px-6 py-3 font-bold uppercase text-[11px] text-right">Importe</th>
                        <th class="px-6 py-3 font-bold uppercase text-[11px] text-center">Estado</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    <tr class="hover:bg-blue-50 transition">
                        <td class="px-6 py-4 text-blue-700 font-bold">FAC2026-001</td>
                        <td class="px-6 py-4 text-slate-700 font-bold uppercase">Comercial Arandina S.L.</td>
                        <td class="px-6 py-4 text-right font-bold text-slate-900">1.210,00 €</td>
                        <td class="px-6 py-4 text-center">
                            <span class="border-2 border-green-600 text-green-700 px-3 py-1 rounded text-[10px] font-black uppercase">Liquidada</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

