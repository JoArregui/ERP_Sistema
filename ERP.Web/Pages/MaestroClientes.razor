@page "/clientes"
@using ERP.Domain.Entities
@using ERP.Web.Services
@inject HttpClient Http
@inject IJSRuntime JS
@inject NotificationService Notify

<div class="max-w-[1400px] mx-auto p-6 animate-in fade-in duration-700">
    
    @* --- SISTEMA DE NOTIFICACIONES (TOASTS) --- *@
    <div class="fixed top-5 right-5 z-[100] flex flex-col gap-3">
        @foreach (var note in activeNotifications)
        {
            <div class="p-4 rounded-lg shadow-2xl border-l-4 @GetNoteStyle(note.Type) animate-in slide-in-from-right duration-300 min-w-[320px] flex justify-between items-center bg-white">
                <div class="flex flex-col">
                    <span class="text-[10px] font-black uppercase opacity-50">Notificaci√≥n del Sistema</span>
                    <span class="text-xs font-bold uppercase">@note.Message</span>
                </div>
                <button @onclick="() => activeNotifications.Remove(note)" class="opacity-50 hover:opacity-100 ml-4">‚úï</button>
            </div>
        }
    </div>

    @* --- CABECERA DE M√ìDULO --- *@
    <div class="flex justify-between items-end mb-8 border-b border-slate-200 pb-6">
        <div>
            <nav class="text-[10px] font-black text-blue-600 uppercase mb-2 tracking-widest">Administraci√≥n > Comercial</nav>
            <h1 class="text-4xl font-black text-slate-900 uppercase tracking-tighter italic">Maestro de Clientes</h1>
        </div>
        <div class="flex gap-3">
            <button @onclick="CargarClientes" class="p-2.5 rounded-xl border border-slate-200 hover:bg-slate-50 transition shadow-sm text-slate-500">
                <span class="text-xl">üîÑ</span>
            </button>
            <button @onclick="NuevoCliente" class="bg-slate-900 hover:bg-blue-600 text-white px-8 py-3 rounded-xl font-black text-xs transition-all shadow-xl flex items-center gap-3 uppercase tracking-widest active:scale-95">
                <span class="text-lg">Ôºã</span> Crear Ficha Cliente
            </button>
        </div>
    </div>

    @* --- BARRA DE FILTROS INTELIGENTE --- *@
    <div class="bg-slate-50 p-2 rounded-2xl mb-8 flex items-center gap-2 border border-slate-200/60 shadow-inner">
        <div class="relative flex-1">
            <input type="text" @bind="searchTerm" @bind:event="oninput" @onkeyup="Filtrar"
                   placeholder="B√∫squeda global por CIF, Raz√≥n Social o C√≥digo Interno..." 
                   class="w-full pl-6 pr-4 py-3 bg-white border-none rounded-xl text-sm shadow-sm focus:ring-2 focus:ring-blue-500/20 outline-none transition" />
        </div>
        
        @* CORRECCI√ìN ERROR RZ10008: Se elimina @bind y se usa value + @onchange manual *@
        <select value="@filtroEstado" @onchange="OnFiltroEstadoChanged" 
                class="bg-white border-none rounded-xl py-3 px-6 text-[10px] font-black text-slate-500 shadow-sm outline-none cursor-pointer hover:bg-slate-100 transition">
            <option value="TODOS">TODOS LOS REGISTROS</option>
            <option value="ACTIVOS">CLIENTES ACTIVOS</option>
            <option value="BLOQUEADOS">BLOQUEADOS / RIESGO</option>
        </select>
    </div>

    @* --- LISTADO DE DATOS (GRID) --- *@
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
        @if (clientesFiltrados == null)
        {
            <div class="p-20 text-center">
                <div class="animate-spin h-8 w-8 border-4 border-blue-600 border-t-transparent rounded-full mx-auto mb-4"></div>
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Sincronizando con Servidor SQL...</p>
            </div>
        }
        else if (clientesFiltrados.Count == 0)
        {
            <div class="p-20 text-center text-slate-400 uppercase font-black text-xs">No se han encontrado registros con los criterios actuales</div>
        }
        else
        {
            <table class="w-full text-left">
                <thead class="bg-slate-50/50 border-b border-slate-100">
                    <tr class="text-[10px] font-black text-slate-400 uppercase tracking-widest">
                        <th class="p-5">Entidad Legal</th>
                        <th class="p-5">Localizaci√≥n / Email</th>
                        <th class="p-5 text-center">Cuentas</th>
                        <th class="p-5 text-center">Estado</th>
                        <th class="p-5 text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-50">
                    @foreach (var cliente in clientesFiltrados)
                    {
                        <tr class="hover:bg-slate-50/80 transition-colors group">
                            <td class="p-5">
                                <div class="flex items-center gap-4">
                                    <div class="h-10 w-10 bg-slate-100 rounded-lg flex items-center justify-center font-black text-slate-400 group-hover:bg-slate-900 group-hover:text-white transition-all uppercase">
                                        @(string.IsNullOrEmpty(cliente.RazonSocial) ? "?" : cliente.RazonSocial.Substring(0, 1))
                                    </div>
                                    <div>
                                        <div class="text-sm font-black text-slate-800 uppercase tracking-tight">@cliente.RazonSocial</div>
                                        <div class="flex items-center gap-2">
                                            <span class="text-[9px] font-bold text-blue-600 bg-blue-50 px-1.5 py-0.5 rounded">@cliente.CodigoCliente</span>
                                            <span class="text-[9px] font-mono text-slate-400">@cliente.CIF</span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="p-5">
                                <div class="text-xs font-bold text-slate-600">@cliente.Poblacion, @cliente.Provincia</div>
                                <div class="text-[10px] text-slate-400 lowercase">@cliente.Email</div>
                            </td>
                            <td class="p-5 text-center">
                                <div class="inline-flex flex-col">
                                    <span class="text-[10px] font-black text-slate-700">@cliente.FormaPago</span>
                                    <span class="text-[9px] font-bold text-slate-400 uppercase">Dto: @cliente.DescuentoFijo%</span>
                                </div>
                            </td>
                            <td class="p-5 text-center">
                                @if (cliente.IsBloqueado)
                                {
                                    <span class="bg-red-50 text-red-600 border border-red-100 px-3 py-1 rounded-full text-[9px] font-black uppercase tracking-tighter">‚ö†Ô∏è Bloqueado</span>
                                }
                                else
                                {
                                    <span class="bg-emerald-50 text-emerald-600 border border-emerald-100 px-3 py-1 rounded-full text-[9px] font-black uppercase tracking-tighter">‚úì Activo</span>
                                }
                            </td>
                            <td class="p-5 text-right">
                                <div class="flex justify-end gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button @onclick="() => Editar(cliente.Id)" class="p-2 hover:bg-slate-900 hover:text-white rounded-lg transition-all" title="Editar">‚úèÔ∏è</button>
                                    <button @onclick="() => Eliminar(cliente.Id)" class="p-2 hover:bg-red-600 hover:text-white rounded-lg transition-all" title="Eliminar">üóëÔ∏è</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    @* --- DRAWER LATERAL DE EDICI√ìN --- *@
    @if (mostrarFormulario)
    {
        <div class="fixed inset-0 bg-slate-900/40 backdrop-blur-sm z-50 flex justify-end">
            <div class="w-full max-w-3xl bg-white h-full shadow-2xl animate-in slide-in-from-right duration-300 flex flex-col">
                <div class="p-8 border-b border-slate-100 flex justify-between items-center bg-slate-50/50">
                    <div>
                        <h2 class="text-2xl font-black text-slate-900 uppercase tracking-tighter">Ficha de Cliente</h2>
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Gesti√≥n de datos maestros</p>
                    </div>
                    <button @onclick="CerrarFormulario" class="h-10 w-10 flex items-center justify-center rounded-full hover:bg-white transition-all text-slate-400 border border-slate-200 shadow-sm">‚úï</button>
                </div>

                <div class="flex-1 overflow-y-auto p-10">
                    <EditForm Model="clienteActual" OnValidSubmit="GuardarCliente">
                        <DataAnnotationsValidator />
                        
                        <div class="space-y-8">
                            <div class="grid grid-cols-2 gap-6">
                                <div class="col-span-2">
                                    <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">Raz√≥n Social</label>
                                    <InputText @bind-Value="clienteActual.RazonSocial" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-blue-500/20 outline-none transition-all uppercase font-bold" />
                                    <ValidationMessage For="@(() => clienteActual.RazonSocial)" class="text-red-500 text-[10px] mt-1 font-bold" />
                                </div>

                                <div>
                                    <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">CIF / NIF</label>
                                    <input value="@clienteActual.CIF" @oninput="(e) => clienteActual.CIF = e.Value?.ToString()?.ToUpper() ?? string.Empty" 
                                           class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl font-mono text-sm uppercase" />
                                    @if (!string.IsNullOrEmpty(clienteActual.CIF) && !Cliente.ValidarCIF(clienteActual.CIF))
                                    {
                                        <div class="bg-amber-50 text-amber-700 p-2 rounded mt-2 text-[9px] font-black border border-amber-100 uppercase">
                                            ‚ö†Ô∏è El formato no coincide con un NIF/CIF oficial
                                        </div>
                                    }
                                </div>

                                <div>
                                    <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">C√≥digo ERP</label>
                                    <InputText @bind-Value="clienteActual.CodigoCliente" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl font-bold" />
                                </div>
                            </div>

                            <div class="grid grid-cols-2 gap-6 pt-4 border-t border-slate-50">
                                <div class="col-span-2">
                                    <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">Email Corporativo</label>
                                    <InputText @bind-Value="clienteActual.Email" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl lowercase" />
                                    <ValidationMessage For="@(() => clienteActual.Email)" class="text-red-500 text-[10px] mt-1 font-bold" />
                                </div>
                                <div>
                                    <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">Poblaci√≥n</label>
                                    <InputText @bind-Value="clienteActual.Poblacion" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl" />
                                </div>
                                <div>
                                    <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">Provincia</label>
                                    <InputText @bind-Value="clienteActual.Provincia" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl" />
                                </div>
                            </div>

                            <div class="flex items-center gap-6 p-4 bg-slate-50 rounded-2xl">
                                <label class="flex items-center gap-3 cursor-pointer">
                                    <InputCheckbox @bind-Value="clienteActual.IsBloqueado" class="h-5 w-5 rounded border-slate-300 text-red-600 focus:ring-red-500" />
                                    <span class="text-[10px] font-black text-slate-700 uppercase">Bloquear cuenta (Riesgo)</span>
                                </label>
                            </div>

                            <div class="flex gap-4 pt-10">
                                <button type="submit" class="flex-1 bg-slate-900 text-white py-5 rounded-2xl font-black text-xs uppercase tracking-widest hover:bg-blue-600 transition-all shadow-xl active:scale-95">
                                    Sincronizar Maestro
                                </button>
                                <button type="button" @onclick="CerrarFormulario" class="px-8 bg-slate-100 text-slate-500 rounded-2xl font-black text-xs uppercase hover:bg-slate-200 transition-all">
                                    Cancelar
                                </button>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Cliente>? clientes;
    private List<Cliente> clientesFiltrados = new();
    private string searchTerm = "";
    private string filtroEstado = "TODOS";
    private bool mostrarFormulario = false;
    private Cliente clienteActual = new();
    private List<NotificationItem> activeNotifications = new();

    protected override async Task OnInitializedAsync() => await CargarClientes();

    private async Task CargarClientes()
    {
        try {
            clientes = await Http.GetFromJsonAsync<List<Cliente>>("api/clientes");
            Filtrar();
        } catch { AddNotification("Error cr√≠tico de comunicaci√≥n con la API", NotificationType.Error); }
    }

    // MANEJADOR ESPEC√çFICO PARA EL SELECT PARA EVITAR RZ10008
    private void OnFiltroEstadoChanged(ChangeEventArgs e)
    {
        filtroEstado = e.Value?.ToString() ?? "TODOS";
        Filtrar();
    }

    private void Filtrar()
    {
        if (clientes == null) return;
        
        var s = searchTerm.ToLower();
        
        clientesFiltrados = clientes.Where(c => 
            (c.RazonSocial != null && c.RazonSocial.ToLower().Contains(s)) || 
            (c.CIF != null && c.CIF.ToLower().Contains(s)) ||
            (c.CodigoCliente != null && c.CodigoCliente.ToLower().Contains(s))
        ).ToList();

        if (filtroEstado == "ACTIVOS") clientesFiltrados = clientesFiltrados.Where(c => !c.IsBloqueado).ToList();
        if (filtroEstado == "BLOQUEADOS") clientesFiltrados = clientesFiltrados.Where(c => c.IsBloqueado).ToList();
        
        StateHasChanged();
    }

    private void NuevoCliente() { clienteActual = new Cliente { EmpresaId = 1, FechaAlta = DateTime.Now }; mostrarFormulario = true; }
    
    private async Task Editar(int id) { 
        clienteActual = await Http.GetFromJsonAsync<Cliente>($"api/clientes/{id}") ?? new(); 
        mostrarFormulario = true; 
    }

    private void CerrarFormulario() => mostrarFormulario = false;

    private async Task GuardarCliente()
    {
        HttpResponseMessage response;
        if (clienteActual.Id == 0) response = await Http.PostAsJsonAsync("api/clientes", clienteActual);
        else response = await Http.PutAsJsonAsync($"api/clientes/{clienteActual.Id}", clienteActual);

        if (response.IsSuccessStatusCode) {
            AddNotification($"Cliente {clienteActual.CodigoCliente} actualizado correctamente", NotificationType.Success);
            await CargarClientes();
            CerrarFormulario();
        } else {
            AddNotification("El servidor rechaz√≥ los datos (Error de Validaci√≥n)", NotificationType.Error);
        }
    }

    private async Task Eliminar(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "ADVERTENCIA: ¬øDesea eliminar permanentemente este registro del maestro?")) {
            var response = await Http.DeleteAsync($"api/clientes/{id}");
            if (response.IsSuccessStatusCode) {
                AddNotification("Registro eliminado satisfactoriamente", NotificationType.Warning);
                await CargarClientes();
            }
        }
    }

    private void AddNotification(string msg, NotificationType type) {
        var note = new NotificationItem { Message = msg, Type = type };
        activeNotifications.Add(note);
        StateHasChanged();
        
        Task.Delay(4000).ContinueWith(_ => { 
            activeNotifications.Remove(note); 
            InvokeAsync(StateHasChanged); 
        });
    }

    private string GetNoteStyle(NotificationType type) => type switch {
        NotificationType.Success => "border-emerald-500 text-emerald-800",
        NotificationType.Error => "border-red-500 text-red-800",
        NotificationType.Warning => "border-amber-500 text-amber-800",
        _ => "border-blue-500 text-blue-800"
    };

    private class NotificationItem { 
        public string Message { get; set; } = string.Empty; 
        public NotificationType Type { get; set; } 
    }
}