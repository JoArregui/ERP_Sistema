@page "/ventas/facturas"
@using ERP.Domain.Entities
@using ERP.Web.Services
@inject IJSRuntime JS
@* Asumo que tienes un servicio de facturas, si no, lo adaptamos *@

<div class="space-y-6 animate-in fade-in duration-500">
    @* CABECERA *@
    <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-4">
        <div>
            <h1 class="text-3xl font-black text-white tracking-tight uppercase italic">Registro de Facturación</h1>
            <p class="text-slate-500 font-medium">Control de ingresos, estados de cobro y exportación fiscal.</p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-3 w-full md:w-auto no-print">
            <div class="flex gap-2">
                <button @onclick="ExportarExcel" class="p-3 bg-emerald-600/20 border border-emerald-500/30 text-emerald-500 rounded-2xl hover:bg-emerald-600 hover:text-white transition-all shadow-lg">
                    <i class="bi bi-file-earmark-excel"></i>
                </button>
                <button @onclick="ExportarPdf" class="p-3 bg-rose-600/20 border border-rose-500/30 text-rose-500 rounded-2xl hover:bg-rose-600 hover:text-white transition-all shadow-lg">
                    <i class="bi bi-file-earmark-pdf"></i>
                </button>
            </div>

            <div class="relative group">
                <i class="bi bi-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-500 group-focus-within:text-blue-400 transition-colors"></i>
                <input type="text" @bind-value="Busqueda" @bind-value:event="oninput"
                       placeholder="Buscar factura o cliente..." 
                       class="bg-slate-900 border border-slate-800 rounded-2xl pl-12 pr-4 py-3 text-sm text-white w-full sm:w-64 focus:ring-4 focus:ring-blue-500/10 outline-none transition-all" />
            </div>

            <button @onclick="NuevaFactura" class="bg-blue-600 hover:bg-blue-500 text-white px-6 py-3 rounded-2xl font-black text-xs uppercase tracking-widest transition-all shadow-lg active:scale-95">
                <i class="bi bi-plus-lg mr-2"></i> Crear Factura
            </button>
        </div>
    </div>

    @* LISTADO DE FACTURAS *@
    <div class="bg-[#0f172a] border border-slate-800 rounded-3xl overflow-hidden shadow-2xl">
        <table class="w-full text-left">
            <thead>
                <tr class="bg-slate-900/50 text-[10px] font-black text-slate-500 uppercase tracking-[0.2em] border-b border-slate-800">
                    <th class="p-5">Nº Factura</th>
                    <th class="p-5">Fecha</th>
                    <th class="p-5">Cliente</th>
                    <th class="p-5">Estado</th>
                    <th class="p-5">Total</th>
                    <th class="p-5 text-right">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-800/50 text-white">
                @* Simulación de datos para ejemplo o mapeo de tu lista real *@
                @foreach (var factura in FacturasFiltradas)
                {
                    <tr class="hover:bg-white/[0.02] transition-colors">
                        <td class="p-5 font-mono text-blue-400 font-bold">@factura.Codigo</td>
                        <td class="p-5 text-sm text-slate-400">@factura.Fecha.ToString("dd/MM/yyyy")</td>
                        <td class="p-5 text-sm font-semibold">@factura.ClienteNombre</td>
                        <td class="p-5">
                            <span class="px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-tighter @GetEstadoClass(factura.Estado)">
                                @factura.Estado
                            </span>
                        </td>
                        <td class="p-5 font-mono font-bold text-lg">@factura.Total.ToString("N2")€</td>
                        <td class="p-5 text-right">
                            <button class="p-2 hover:text-blue-400 transition-colors"><i class="bi bi-eye"></i></button>
                            <button class="p-2 hover:text-rose-500 transition-colors"><i class="bi bi-download"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private string Busqueda = "";
    private List<FacturaDTO> ListaFacturas = new(); // Cambiar por tu entidad real

    protected override async Task OnInitializedAsync()
    {
        // Simulamos carga de datos o llamada a servicio
        await CargarFacturas();
    }

    private async Task CargarFacturas()
    {
        // Aquí iría tu: ListaFacturas = await FacturaService.GetFacturasAsync();
        // Simulación:
        ListaFacturas = new List<FacturaDTO>
        {
            new FacturaDTO { Codigo = "FAC-2026-001", Fecha = DateTime.Now, ClienteNombre = "Industrial S.A.", Estado = "Cobrada", Total = 1250.50m },
            new FacturaDTO { Codigo = "FAC-2026-002", Fecha = DateTime.Now, ClienteNombre = "Talleres Vega", Estado = "Pendiente", Total = 450.00m }
        };
        await Task.CompletedTask; 
    }

    private IEnumerable<FacturaDTO> FacturasFiltradas => 
        ListaFacturas.Where(f => f.Codigo.Contains(Busqueda, StringComparison.OrdinalIgnoreCase) || 
                                 f.ClienteNombre.Contains(Busqueda, StringComparison.OrdinalIgnoreCase));

    private string GetEstadoClass(string estado) => estado switch
    {
        "Cobrada" => "bg-emerald-500/10 text-emerald-500",
        "Pendiente" => "bg-amber-500/10 text-amber-500",
        _ => "bg-slate-500/10 text-slate-500"
    };

    // --- CORRECCIÓN CS1998 Y MÉTODOS DE EXPORTACIÓN ---

    private void NuevaFactura() // Cambiado a void si no hay await, o Task si navegarás
    {
        // Lógica para abrir modal o navegar
    }

    private async Task ExportarExcel()
    {
        var data = FacturasFiltradas.Select(f => new { f.Codigo, f.Fecha, f.ClienteNombre, f.Estado, f.Total });
        await JS.InvokeVoidAsync("exportToExcel", data, "Facturacion_Ventas");
    }

    private async Task ExportarPdf()
    {
        var headers = new string[] { "Código", "Fecha", "Cliente", "Estado", "Total" };
        var rows = FacturasFiltradas.Select(f => new string[] { 
            f.Codigo, 
            f.Fecha.ToShortDateString(), 
            f.ClienteNombre, 
            f.Estado, 
            f.Total.ToString("N2") + "€" 
        }).ToList();

        await JS.InvokeVoidAsync("exportToPdf", "Reporte de Facturación", headers, rows, "Facturas_Ventas");
    }

    // Clase temporal para el ejemplo
    public class FacturaDTO {
        public string Codigo { get; set; } = "";
        public DateTime Fecha { get; set; }
        public string ClienteNombre { get; set; } = "";
        public string Estado { get; set; } = "";
        public decimal Total { get; set; }
    }
}