@page "/ventas/facturas"
@using ERP.Domain.Entities
@using ERP.Domain.DTOs
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="p-6 animate-fade-in">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h2 class="text-3xl font-black text-slate-800 tracking-tighter uppercase italic">Registro de Ventas</h2>
            <p class="text-slate-500 text-sm">Gestión de facturación y documentos comerciales</p>
        </div>
        <button @onclick='() => Nav.NavigateTo("/ventas/nueva-factura")' 
                class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-2xl font-bold shadow-lg shadow-blue-200 transition-all flex items-center gap-2">
            <i class="bi bi-plus-lg"></i> Nueva Factura
        </button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-white p-4 rounded-2xl border border-slate-100 shadow-sm">
            <span class="text-[10px] text-slate-400 font-bold uppercase tracking-widest">Total Facturado (Periodo)</span>
            <div class="text-2xl font-black text-slate-800">@TotalFacturado.ToString("C2")</div>
        </div>
        <div class="bg-white p-4 rounded-2xl border border-slate-100 shadow-sm">
            <span class="text-[10px] text-slate-400 font-bold uppercase tracking-widest">Documentos</span>
            <div class="text-2xl font-black text-blue-600">@(documentos?.Count ?? 0)</div>
        </div>
    </div>

    <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-slate-100">
        @if (documentos == null)
        {
            <div class="p-20 text-center">
                <div class="spinner-border text-blue-600" role="status"></div>
                <p class="mt-4 text-slate-500 font-medium">Consultando base de datos...</p>
            </div>
        }
        else if (!documentos.Any())
        {
            <div class="p-20 text-center">
                <i class="bi bi-inbox text-5xl text-slate-200"></i>
                <p class="mt-4 text-slate-500 italic">No hay facturas registradas todavía.</p>
            </div>
        }
        else
        {
            <table class="table w-full text-left border-collapse">
                <thead class="bg-slate-900 text-white text-[10px] uppercase tracking-widest">
                    <tr>
                        <th class="p-4">Fecha</th>
                        <th class="p-4">Nº Documento</th>
                        <th class="p-4">Cliente</th>
                        <th class="p-4 text-right">Base Imponible</th>
                        <th class="p-4 text-right">Total</th>
                        <th class="p-4 text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody class="text-sm">
                    @foreach (var doc in documentos)
                    {
                        <tr class="border-b hover:bg-slate-50 transition-colors">
                            <td class="p-4 text-slate-500 font-medium">@doc.Fecha.ToString("dd/MM/yyyy")</td>
                            <td class="p-4 font-black text-slate-800">@doc.NumeroDocumento</td>
                            <td class="p-4">
                                <div class="font-bold text-slate-700">@doc.Cliente?.RazonSocial</div>
                                <div class="text-[10px] text-slate-400 tracking-wider">CIF: @doc.Cliente?.CIF</div>
                            </td>
                            <td class="p-4 text-right text-slate-600">@doc.BaseImponible.ToString("N2") €</td>
                            <td class="p-4 text-right">
                                <span class="bg-blue-50 text-blue-700 px-3 py-1 rounded-full font-black text-xs">
                                    @doc.Total.ToString("N2") €
                                </span>
                            </td>
                            <td class="p-4 text-center">
                                <div class="flex justify-center gap-2">
                                    <button @onclick="() => DescargarPdf(doc.Id)" 
                                            class="flex items-center gap-2 bg-slate-100 hover:bg-red-500 hover:text-white text-slate-600 px-4 py-2 rounded-xl transition-all font-bold text-xs shadow-sm">
                                        <i class="bi bi-file-earmark-pdf-fill"></i> PDF
                                    </button>
                                    <button class="bg-slate-100 hover:bg-slate-800 hover:text-white text-slate-600 p-2 rounded-xl transition-all shadow-sm">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@code {
    private List<DocumentoComercial>? documentos;
    private decimal TotalFacturado => documentos?.Sum(d => d.Total) ?? 0;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        try 
        {
            // Usamos el endpoint que definimos en el controlador completo
            documentos = await Http.GetFromJsonAsync<List<DocumentoComercial>>("api/facturacion/listado");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar: {ex.Message}");
        }
    }

    private async Task DescargarPdf(int id)
    {
        try
        {
            // Llamada al endpoint de descarga del FacturacionController
            var response = await Http.GetFromJsonAsync<FileResponseDTO>($"api/facturacion/descargar-pdf/{id}");

            if (response != null && !string.IsNullOrEmpty(response.Content))
            {
                // Invocamos la función JS de index.html para disparar la descarga en el navegador
                await JS.InvokeVoidAsync("downloadFile", response.FileName, response.Content);
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", "Error al procesar el documento: " + ex.Message);
        }
    }

    // DTO interno para mapear la respuesta del PDF
    public class FileResponseDTO 
    {
        public string FileName { get; set; } = string.Empty;
        public string Content { get; set; } = string.Empty;
    }
}