@page "/nueva-operacion"
@using ERP.Domain.Entities
@using ERP.Web.Services
@inject HttpClient Http
@inject IJSRuntime JS

<div class="p-8 bg-[#020617] min-h-screen text-white">
    <div class="max-w-6xl mx-auto space-y-6">
        
        @* CABECERA *@
        <div class="flex justify-between items-end border-b border-slate-800 pb-6">
            <div>
                <h1 class="text-3xl font-black uppercase italic tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-white to-slate-500">Nueva Operación</h1>
                <p class="text-slate-500 text-sm font-medium">Gestión de ventas y servicios por artículos</p>
            </div>
            <a href="/escritorio" class="px-6 py-3 bg-slate-900 border border-slate-800 hover:bg-slate-800 rounded-2xl text-[10px] font-black uppercase tracking-widest transition-all">
                <i class="bi bi-arrow-left mr-2"></i> Volver
            </a>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            
            @* COLUMNA IZQUIERDA: FORMULARIO *@
            <div class="lg:col-span-8 space-y-6">
                
                @* CONFIGURACIÓN BÁSICA *@
                <div class="bg-slate-900/40 border border-slate-800 rounded-[2.5rem] p-8 backdrop-blur-sm">
                    <h3 class="text-[10px] font-black text-blue-500 uppercase tracking-[0.2em] mb-6 flex items-center gap-2">
                        <i class="bi bi-info-circle-fill"></i> Cabecera del Documento
                    </h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label class="text-[10px] font-bold text-slate-500 uppercase ml-2">Cliente / Receptor</label>
                            <select @bind="ClienteId" class="form-input-premium">
                                <option value="0">-- Seleccionar Cliente --</option>
                                @foreach (var c in ListaClientes)
                                {
                                    <option value="@c.Id">@c.NombreComercial</option>
                                }
                            </select>
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] font-bold text-slate-500 uppercase ml-2">Fecha de Emisión</label>
                            <input type="date" @bind="FechaOperacion" class="form-input-premium" />
                        </div>
                    </div>
                </div>

                @* AÑADIR ARTÍCULOS *@
                <div class="bg-slate-900/40 border border-slate-800 rounded-[2.5rem] p-8 backdrop-blur-sm">
                    <h3 class="text-[10px] font-black text-emerald-500 uppercase tracking-[0.2em] mb-6 flex items-center gap-2">
                        <i class="bi bi-cart-plus-fill"></i> Selección de Artículos
                    </h3>
                    
                    <div class="flex gap-4 items-end bg-slate-950/50 p-6 rounded-3xl border border-slate-800/50">
                        <div class="flex-1 space-y-2">
                            <label class="text-[10px] font-bold text-slate-500 uppercase ml-2">Buscar en el Catálogo</label>
                            <select @bind="ArticuloSeleccionadoId" class="form-input-premium">
                                <option value="0">Seleccione un artículo para añadir...</option>
                                @foreach (var art in ArticulosDisponibles)
                                {
                                    <option value="@art.Id">@art.Descripcion (@art.PrecioVenta.ToString("N2")€)</option>
                                }
                            </select>
                        </div>
                        <button @onclick="AgregarLinea" class="h-[52px] px-8 bg-emerald-600 hover:bg-emerald-500 text-white rounded-2xl font-black text-xs uppercase transition-all shadow-lg shadow-emerald-900/20 active:scale-95">
                            Añadir
                        </button>
                    </div>

                    @* LISTADO DE LÍNEAS *@
                    <div class="mt-8">
                        @if (LineasVenta.Any())
                        {
                            <div class="overflow-hidden rounded-3xl border border-slate-800">
                                <table class="w-full text-left">
                                    <thead class="bg-slate-950/50 text-[10px] font-black text-slate-500 uppercase italic">
                                        <tr>
                                            <th class="p-5">Concepto / Artículo</th>
                                            <th class="p-5 text-center">Cant.</th>
                                            <th class="p-5 text-right">Precio</th>
                                            <th class="p-5 text-right">Subtotal</th>
                                            <th class="p-5 text-center"></th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-slate-800/50">
                                        @foreach (var linea in LineasVenta)
                                        {
                                            <tr class="hover:bg-white/[0.01] transition-colors">
                                                <td class="p-5 text-sm font-bold text-slate-200">@linea.DescripcionArticulo</td>
                                                <td class="p-5">
                                                    <input type="number" @bind="linea.Cantidad" @bind:event="oninput" class="w-20 bg-slate-950 border border-slate-800 rounded-xl py-2 text-center text-sm font-mono text-emerald-400" />
                                                </td>
                                                <td class="p-5 text-right font-mono text-sm">@linea.PrecioUnitario.ToString("N2")€</td>
                                                <td class="p-5 text-right font-mono text-sm font-black text-white">@((linea.Cantidad * linea.PrecioUnitario).ToString("N2"))€</td>
                                                <td class="p-5 text-center">
                                                    <button @onclick="() => EliminarLinea(linea)" class="w-8 h-8 flex items-center justify-center rounded-full bg-rose-500/10 text-rose-500 hover:bg-rose-500 hover:text-white transition-all">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="py-12 text-center border-2 border-dashed border-slate-800 rounded-[2rem]">
                                <i class="bi bi-bag-plus text-4xl text-slate-800 mb-3 block"></i>
                                <p class="text-xs font-black text-slate-600 uppercase tracking-widest">No hay artículos añadidos</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            @* COLUMNA DERECHA: TOTALES *@
            <div class="lg:col-span-4">
                <div class="bg-blue-600 rounded-[3rem] p-10 sticky top-8 shadow-2xl shadow-blue-900/40 overflow-hidden relative">
                    @* Decoración de fondo *@
                    <div class="absolute -top-10 -right-10 w-40 h-40 bg-white/10 rounded-full blur-3xl"></div>
                    
                    <h3 class="text-[10px] font-black text-blue-200 uppercase tracking-[0.3em] mb-10 text-center">Liquidación Final</h3>
                    
                    <div class="space-y-6">
                        <div class="flex justify-between items-center">
                            <span class="text-xs font-bold text-blue-100 uppercase">Base Imponible</span>
                            <span class="text-xl font-mono font-bold">@BaseImponible.ToString("N2")€</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-xs font-bold text-blue-100 uppercase">Impuestos (21%)</span>
                            <span class="text-xl font-mono font-bold">@TotalIva.ToString("N2")€</span>
                        </div>
                        
                        <div class="pt-8 border-t border-white/20">
                            <span class="text-[10px] font-black text-white uppercase tracking-widest block mb-2">Total Operación</span>
                            <div class="flex items-baseline gap-2">
                                <span class="text-6xl font-black tracking-tighter text-white">@TotalDocumento.ToString("N2")</span>
                                <span class="text-2xl font-bold text-blue-200">€</span>
                            </div>
                        </div>
                    </div>

                    <button @onclick="ConfirmarRegistro" class="w-full mt-12 bg-white text-blue-600 py-5 rounded-[2rem] font-black uppercase text-xs tracking-[0.2em] hover:bg-slate-100 transition-all shadow-xl active:scale-95 flex items-center justify-center gap-3">
                        <i class="bi bi-check-all text-xl"></i> Confirmar y Registrar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-input-premium {
        width: 100%; background-color: #0f172a; border: 1px solid #1e293b;
        border-radius: 1.25rem; padding: 0.85rem 1.25rem; color: white; font-size: 0.875rem;
        transition: all 0.2s;
    }
    .form-input-premium:focus { border-color: #3b82f6; outline: none; box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1); }
</style>

@code {
    private int ClienteId;
    private DateTime FechaOperacion = DateTime.Now;
    private List<Cliente> ListaClientes = new();
    private List<Articulo> ArticulosDisponibles = new();
    private List<DocumentoLinea> LineasVenta = new();
    
    private int ArticuloSeleccionadoId;
    
    // Totales calculados dinámicamente
    private decimal BaseImponible => LineasVenta.Sum(l => l.Cantidad * l.PrecioUnitario);
    private decimal TotalIva => BaseImponible * 0.21m;
    private decimal TotalDocumento => BaseImponible + TotalIva;

    protected override async Task OnInitializedAsync()
    {
        try {
            // Carga de datos iniciales
            ListaClientes = await Http.GetFromJsonAsync<List<Cliente>>("api/clientes") ?? new();
            ArticulosDisponibles = await Http.GetFromJsonAsync<List<Articulo>>("api/articulos") ?? new();
        } catch (Exception) {
            // Manejo de errores de conexión
        }
    }

    private void AgregarLinea()
    {
        if (ArticuloSeleccionadoId == 0) return;

        var art = ArticulosDisponibles.FirstOrDefault(a => a.Id == ArticuloSeleccionadoId);
        if (art != null)
        {
            // Evitar duplicados: Si el artículo ya está, sumamos cantidad
            var lineaExistente = LineasVenta.FirstOrDefault(l => l.ArticuloId == art.Id);
            if (lineaExistente != null)
            {
                lineaExistente.Cantidad++;
            }
            else
            {
                LineasVenta.Add(new DocumentoLinea 
                {
                    ArticuloId = art.Id,
                    DescripcionArticulo = art.Descripcion,
                    Cantidad = 1,
                    PrecioUnitario = art.PrecioVenta,
                    PorcentajeIva = (decimal)art.PorcentajeIva 
                });
            }
            ArticuloSeleccionadoId = 0; // Reset selector
        }
    }

    private void EliminarLinea(DocumentoLinea linea)
    {
        LineasVenta.Remove(linea);
    }

    private async Task ConfirmarRegistro()
    {
        if (ClienteId == 0 || !LineasVenta.Any())
        {
            await JS.InvokeVoidAsync("alert", "Debe seleccionar un cliente y al menos un artículo.");
            return;
        }

        // Simulación de proceso
        await Task.Delay(500); // Esto quita el warning CS1998
        
        // Aquí iría el post a tu controlador de Documentos/Facturas
        // await Http.PostAsJsonAsync("api/operaciones", ...);

        await JS.InvokeVoidAsync("alert", "Operación registrada correctamente.");
    }
}