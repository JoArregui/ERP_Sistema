@page "/configuracion/empresas"
@using ERP.Domain.Entities
@inject HttpClient Http
@inject IJSRuntime JS

<div class="max-w-[1400px] mx-auto p-6 animate-in fade-in duration-700">
    
    @* --- CABECERA ESTILO CORPORATIVO --- *@
    <div class="flex justify-between items-end mb-8 border-b border-slate-200 pb-6">
        <div>
            <nav class="text-[10px] font-black text-slate-400 uppercase mb-2 tracking-widest">Ajustes Globales > Estructura</nav>
            <h1 class="text-4xl font-black text-slate-900 uppercase tracking-tighter italic">Gesti√≥n de Empresas</h1>
        </div>
        @if (!mostrarFormulario)
        {
            <button @onclick="NuevaEmpresa" class="bg-blue-600 hover:bg-slate-900 text-white px-8 py-3 rounded-xl font-black text-xs transition-all shadow-xl flex items-center gap-3 uppercase tracking-widest">
                <span class="text-lg">Ôºã</span> Registrar Sede
            </button>
        }
    </div>

    @if (!mostrarFormulario)
    {
        @* --- VISTA DE TARJETAS (GRID) --- *@
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @if (empresas == null)
            {
                <div class="col-span-3 p-20 text-center uppercase font-black text-slate-300 tracking-widest animate-pulse">Cargando Entidades Jur√≠dicas...</div>
            }
            else
            {
                @foreach (var emp in empresas)
                {
                    <div class="group bg-white rounded-[2.5rem] p-8 border border-slate-200 shadow-sm hover:shadow-2xl transition-all duration-500 relative overflow-hidden">
                        @* Indicador de Color Corporativo *@
                        <div class="absolute top-0 right-0 w-32 h-32 opacity-10 translate-x-10 -translate-y-10 rounded-full" style="background-color: @emp.ColorHex"></div>
                        
                        <div class="relative z-10">
                            <div class="flex justify-between items-start mb-6">
                                @if (!string.IsNullOrEmpty(emp.LogoBase64))
                                {
                                    <img src="@emp.LogoBase64" class="h-12 w-auto grayscale group-hover:grayscale-0 transition-all" />
                                }
                                else
                                {
                                    <div class="h-12 w-12 rounded-2xl bg-slate-100 flex items-center justify-center font-black text-slate-400">@emp.NombreComercial.Substring(0, 1)</div>
                                }
                                <span class="text-[9px] font-black px-3 py-1 rounded-full @(emp.IsActiva ? "bg-emerald-50 text-emerald-600" : "bg-red-50 text-red-600") uppercase">
                                    @(emp.IsActiva ? "Operativa" : "Inactiva")
                                </span>
                            </div>

                            <h3 class="text-xl font-black text-slate-900 uppercase leading-none mb-1">@emp.NombreComercial</h3>
                            <p class="text-[10px] font-bold text-slate-400 uppercase mb-6 tracking-tighter">@emp.RazonSocial</p>

                            <div class="space-y-2 mb-8">
                                <div class="flex items-center gap-2 text-xs font-medium text-slate-600">
                                    <span class="opacity-50">üÜî</span> @emp.CIF
                                </div>
                                <div class="flex items-center gap-2 text-xs font-medium text-slate-600">
                                    <span class="opacity-50">üìç</span> @emp.Poblacion, @emp.Provincia
                                </div>
                            </div>

                            <div class="flex gap-2">
                                <button @onclick="() => Editar(emp)" class="flex-1 bg-slate-900 text-white py-3 rounded-xl font-black text-[10px] uppercase tracking-widest hover:bg-blue-600 transition-colors">Configurar</button>
                                <button @onclick="() => Eliminar(emp.Id)" class="px-4 bg-slate-100 text-slate-400 rounded-xl hover:bg-red-50 hover:text-red-600 transition-colors">üóëÔ∏è</button>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
    else
    {
        @* --- FORMULARIO DE EDICI√ìN PROFESIONAL --- *@
        <div class="max-w-4xl mx-auto bg-white rounded-[3rem] shadow-2xl border border-slate-100 overflow-hidden animate-in slide-in-from-bottom-4 duration-500">
            <EditForm Model="empresaActual" OnValidSubmit="GuardarEmpresa">
                <DataAnnotationsValidator />
                
                <div class="p-12">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                        
                        @* SECCI√ìN IZQUIERDA: IDENTIDAD *@
                        <div class="space-y-6">
                            <h2 class="text-xs font-black text-blue-600 uppercase tracking-[0.2em] mb-8">01. Identidad Legal</h2>
                            
                            <div>
                                <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">Nombre Comercial</label>
                                <InputText @bind-Value="empresaActual.NombreComercial" class="w-full p-4 bg-slate-50 border-none rounded-2xl font-bold" />
                            </div>

                            <div>
                                <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">Raz√≥n Social</label>
                                <InputText @bind-Value="empresaActual.RazonSocial" class="w-full p-4 bg-slate-50 border-none rounded-2xl font-bold" />
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">CIF/NIF</label>
                                    <InputText @bind-Value="empresaActual.CIF" class="w-full p-4 bg-slate-50 border-none rounded-2xl font-mono uppercase" />
                                </div>
                                <div>
                                    <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">Color Corp.</label>
                                    <input type="color" @bind="empresaActual.ColorHex" class="w-full h-[52px] p-1 bg-slate-50 border-none rounded-2xl cursor-pointer" />
                                </div>
                            </div>
                        </div>

                        @* SECCI√ìN DERECHA: FACTURACI√ìN *@
                        <div class="space-y-6">
                            <h2 class="text-xs font-black text-blue-600 uppercase tracking-[0.2em] mb-8">02. Configuraci√≥n de Negocio</h2>
                            
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">Serie Facturas</label>
                                    <InputText @bind-Value="empresaActual.SerieFacturacion" class="w-full p-4 bg-blue-50/50 border-2 border-blue-100 rounded-2xl font-black text-blue-600" />
                                </div>
                                <div>
                                    <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">IVA Defecto %</label>
                                    <InputNumber @bind-Value="empresaActual.IvaDefecto" class="w-full p-4 bg-slate-50 border-none rounded-2xl font-bold" />
                                </div>
                            </div>

                            <div>
                                <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">Registro Mercantil</label>
                                <InputTextArea @bind-Value="empresaActual.RegistroMercantil" class="w-full p-4 bg-slate-50 border-none rounded-2xl text-xs min-h-[100px]" placeholder="Datos para el pie de factura..." />
                            </div>
                        </div>

                        @* SECCI√ìN INFERIOR: LOCALIZACI√ìN *@
                        <div class="md:col-span-2 grid grid-cols-1 md:grid-cols-4 gap-4 pt-8 border-t border-slate-100">
                            <div class="md:col-span-2">
                                <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">Direcci√≥n</label>
                                <InputText @bind-Value="empresaActual.Direccion" class="w-full p-4 bg-slate-50 border-none rounded-2xl font-medium" />
                            </div>
                            <div>
                                <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">Poblaci√≥n</label>
                                <InputText @bind-Value="empresaActual.Poblacion" class="w-full p-4 bg-slate-50 border-none rounded-2xl font-medium" />
                            </div>
                            <div>
                                <label class="text-[10px] font-black text-slate-400 uppercase mb-2 block">C√≥digo Postal</label>
                                <InputText @bind-Value="empresaActual.CodigoPostal" class="w-full p-4 bg-slate-50 border-none rounded-2xl font-medium" />
                            </div>
                        </div>
                    </div>

                    <div class="flex gap-4 mt-12">
                        <button type="submit" class="flex-1 bg-slate-900 text-white py-5 rounded-2xl font-black text-xs uppercase tracking-[0.2em] hover:bg-blue-600 transition-all shadow-xl active:scale-95">
                            Sincronizar Maestro Empresa
                        </button>
                        <button type="button" @onclick="() => mostrarFormulario = false" class="px-10 bg-slate-100 text-slate-500 rounded-2xl font-black text-xs uppercase hover:bg-slate-200 transition-all">
                            Descartar
                        </button>
                    </div>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    private List<Empresa>? empresas;
    private Empresa empresaActual = new();
    private bool mostrarFormulario = false;

    protected override async Task OnInitializedAsync() => await CargarEmpresas();

    private async Task CargarEmpresas()
    {
        try {
            empresas = await Http.GetFromJsonAsync<List<Empresa>>("api/empresas");
        } catch { /* Manejo de errores */ }
    }

    private void NuevaEmpresa()
    {
        empresaActual = new Empresa { 
            IsActiva = true, 
            SerieFacturacion = DateTime.Now.Year.ToString(),
            ColorHex = "#3498db"
        };
        mostrarFormulario = true;
    }

    private void Editar(Empresa emp)
    {
        empresaActual = emp;
        mostrarFormulario = true;
    }

    private async Task GuardarEmpresa()
    {
        empresaActual.UltimaModificacion = DateTime.Now;
        
        HttpResponseMessage response;
        if (empresaActual.Id == 0) response = await Http.PostAsJsonAsync("api/empresas", empresaActual);
        else response = await Http.PutAsJsonAsync($"api/empresas/{empresaActual.Id}", empresaActual);

        if (response.IsSuccessStatusCode)
        {
            await CargarEmpresas();
            mostrarFormulario = false;
        }
    }

    private async Task Eliminar(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "¬øEliminar definitivamente esta sede de la organizaci√≥n?"))
        {
            await Http.DeleteAsync($"api/empresas/{id}");
            await CargarEmpresas();
        }
    }
}