@page "/ventas/cierres"
@using ERP.Domain.Entities
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="max-w-6xl mx-auto p-8 animate-in fade-in slide-in-from-bottom-4 duration-700">
    
    @* ENCABEZADO Y ACCIONES PRINCIPALES *@
    <div class="flex justify-between items-start mb-10">
        <div>
            <h2 class="text-5xl font-black italic tracking-tighter uppercase text-slate-900">Historial Z</h2>
            <div class="flex items-center gap-3 mt-2">
                <p class="text-slate-400 text-xs font-bold uppercase tracking-[0.3em]">Auditoría de arqueos</p>
                <button @onclick="() => verPrivacidad = !verPrivacidad" 
                        class="flex items-center gap-2 px-3 py-1 bg-slate-100 hover:bg-slate-200 rounded-full transition-all">
                    <i class="bi @(verPrivacidad ? "bi-eye-slash-fill text-blue-600" : "bi-eye-fill text-slate-400")"></i>
                    <span class="text-[9px] font-black uppercase tracking-widest text-slate-500">
                        @(verPrivacidad ? "Ocultar Datos" : "Ver Datos")
                    </span>
                </button>
            </div>
        </div>
        <button @onclick='() => Nav.NavigateTo("/cierre-caja")' 
                class="px-8 py-4 bg-slate-900 hover:bg-blue-600 text-white rounded-2xl font-black text-xs uppercase tracking-widest transition-all shadow-lg active:scale-95">
            Nuevo Cierre
        </button>
    </div>

    @* BARRA DE FILTROS *@
    <div class="bg-white rounded-[2rem] p-6 mb-8 border border-slate-100 shadow-sm flex flex-wrap gap-6 items-end">
        <div class="flex-1 min-w-[200px]">
            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 block ml-2">Buscar</label>
            <input @bind="filtroTexto" @bind:event="oninput" type="text" placeholder="Terminal o ID..." 
                   class="w-full bg-slate-50 border-none rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 transition-all" />
        </div>
        <div>
            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 block ml-2">Desde</label>
            <input @bind="fechaDesde" type="date" 
                   class="bg-slate-50 border-none rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 transition-all" />
        </div>
        <div>
            <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 block ml-2">Hasta</label>
            <input @bind="fechaHasta" type="date" 
                   class="bg-slate-50 border-none rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 transition-all" />
        </div>
        <button @onclick="CargarHistorial" class="p-3 bg-blue-50 text-blue-600 rounded-xl hover:bg-blue-600 hover:text-white transition-all">
            <i class="bi bi-search"></i>
        </button>
    </div>

    @if (CierresFiltrados == null)
    {
        <div class="bg-white rounded-[3rem] p-20 text-center shadow-xl border border-slate-100">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-slate-900 mx-auto"></div>
            <p class="mt-6 text-slate-400 font-bold text-xs uppercase tracking-widest">Sincronizando archivo...</p>
        </div>
    }
    else if (!CierresFiltrados.Any())
    {
        <div class="bg-white rounded-[3rem] p-20 text-center shadow-xl border border-slate-100">
            <i class="bi bi-funnel text-5xl text-slate-200"></i>
            <p class="mt-4 text-slate-500 font-bold">No hay cierres que coincidan con los filtros.</p>
        </div>
    }
    else
    {
        <div class="bg-white rounded-[3rem] shadow-2xl overflow-hidden border border-slate-100">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-slate-900 text-white">
                        <th class="px-8 py-6 text-[10px] font-black uppercase tracking-widest">Fecha y Turno</th>
                        <th class="px-8 py-6 text-[10px] font-black uppercase tracking-widest">Terminal</th>
                        <th class="px-8 py-6 text-[10px] font-black uppercase tracking-widest text-right">Efectivo Real</th>
                        <th class="px-8 py-6 text-[10px] font-black uppercase tracking-widest text-right">Diferencia</th>
                        <th class="px-8 py-6 text-[10px] font-black uppercase tracking-widest text-center">Informe</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-50">
                    @foreach (var c in CierresFiltrados)
                    {
                        <tr class="hover:bg-slate-50 transition-colors group">
                            <td class="px-8 py-6">
                                <div class="font-black text-slate-800">@c.FechaCierre.ToString("dd/MM/yyyy")</div>
                                <div class="text-[10px] text-slate-400 font-bold uppercase tracking-tighter">@c.FechaCierre.ToString("HH:mm") hrs</div>
                            </td>
                            <td class="px-8 py-6">
                                <span class="px-3 py-1 bg-slate-100 text-slate-500 rounded-lg text-[10px] font-black uppercase">@c.Terminal</span>
                            </td>
                            <td class="px-8 py-6 text-right">
                                <div class="transition-all duration-300 @(verPrivacidad ? "" : "blur-md select-none")">
                                    <span class="font-black text-slate-800 text-lg">@c.ImporteRealEnCaja.ToString("N2")€</span>
                                </div>
                            </td>
                            <td class="px-8 py-6 text-right">
                                <div class="transition-all duration-300 @(verPrivacidad ? "" : "blur-md select-none")">
                                    <span class='px-4 py-2 rounded-xl text-[10px] font-black @(Math.Abs(c.Descuadre) < 0.01m ? "bg-emerald-100 text-emerald-600" : "bg-rose-100 text-rose-600")'>
                                        @(c.Descuadre > 0 ? "+" : "")@c.Descuadre.ToString("N2")€
                                    </span>
                                </div>
                            </td>
                            <td class="px-8 py-6 text-center">
                                <button @onclick="() => DescargarPdf(c.Id)" 
                                        class="px-5 py-2 bg-slate-100 hover:bg-slate-900 hover:text-white text-slate-600 rounded-xl transition-all font-black text-[10px] uppercase tracking-widest shadow-sm flex items-center gap-2 mx-auto">
                                    <i class="bi bi-file-earmark-pdf-fill"></i>
                                    <span>PDF Z</span>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<CierreCaja>? Cierres;
    private bool verPrivacidad = false;
    
    // Filtros
    private string filtroTexto = "";
    private DateTime fechaDesde = DateTime.Now.AddDays(-30);
    private DateTime fechaHasta = DateTime.Now;

    protected override async Task OnInitializedAsync()
    {
        await CargarHistorial();
    }

    private IEnumerable<CierreCaja>? CierresFiltrados => Cierres?
        .Where(x => (string.IsNullOrEmpty(filtroTexto) || 
                     x.Terminal.Contains(filtroTexto, StringComparison.OrdinalIgnoreCase) || 
                     x.Id.ToString() == filtroTexto) &&
                    x.FechaCierre.Date >= fechaDesde.Date && 
                    x.FechaCierre.Date <= fechaHasta.Date);

    private async Task CargarHistorial()
    {
        try
        {
            Cierres = await Http.GetFromJsonAsync<List<CierreCaja>>("api/cierrecaja/historial/1");
            Cierres = Cierres?.OrderByDescending(x => x.FechaCierre).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private async Task DescargarPdf(int id)
    {
        await JS.InvokeVoidAsync("open", $"api/cierrecaja/{id}/pdf", "_blank");
    }
}