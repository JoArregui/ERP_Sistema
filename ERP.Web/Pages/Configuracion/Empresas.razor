@page "/configuracion/empresa"
@using ERP.Domain.Entities
@using System.Net.Http.Json
@inject HttpClient Http
@inject IJSRuntime JS

<div class="p-6 min-h-screen bg-slate-50">
    @* CABECERA DE LA PÁGINA *@
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-black text-slate-800 tracking-tight">MAESTRO DE EMPRESAS</h1>
            <p class="text-slate-500 text-sm">Configuración de entidades legales y branding corporativo</p>
        </div>
        <button @onclick="() => AbrirModal(new Empresa())" 
                class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-xl font-bold shadow-lg shadow-blue-200 transition-all flex items-center gap-2">
            <i class="bi bi-plus-lg"></i> REGISTRAR EMPRESA
        </button>
    </div>

    @if (listaEmpresas == null)
    {
        <div class="flex flex-col justify-center items-center py-20">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mb-4"></div>
            <p class="text-slate-400 font-medium">Cargando base de datos corporativa...</p>
        </div>
    }
    else if (!listaEmpresas.Any())
    {
        <div class="bg-white border-2 border-dashed border-slate-200 rounded-3xl p-20 text-center">
            <i class="bi bi-building text-6xl text-slate-200 mb-4 block"></i>
            <p class="text-slate-500 font-bold">No hay empresas registradas todavía.</p>
        </div>
    }
    else
    {
        @* LISTADO EN GRID *@
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var emp in listaEmpresas)
            {
                <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden group hover:shadow-xl hover:shadow-blue-900/5 transition-all duration-300">
                    <div class="h-2" style="background-color: @(string.IsNullOrEmpty(emp.ColorHex) ? "#1e293b" : emp.ColorHex)"></div>
                    
                    <div class="p-6">
                        <div class="flex justify-between items-start mb-4">
                            <div class="w-14 h-14 bg-slate-50 rounded-xl flex items-center justify-center border border-slate-100 overflow-hidden">
                                @if (!string.IsNullOrEmpty(emp.LogoUrl))
                                {
                                    <img src="@emp.LogoUrl" class="w-full h-full object-contain p-1" />
                                }
                                else
                                {
                                    <i class="bi bi-building text-2xl text-slate-300"></i>
                                }
                            </div>
                            <div class="flex flex-col items-end">
                                <span class="text-[9px] font-black text-slate-400 uppercase">ID Interno</span>
                                <span class="text-xs font-bold text-slate-600">#@emp.Id.ToString("D3")</span>
                            </div>
                        </div>

                        <h3 class="font-black text-slate-800 text-lg leading-tight mb-1">@emp.NombreComercial</h3>
                        <p class="text-slate-400 text-xs font-medium mb-4 truncate">@emp.RazonSocial</p>

                        <div class="space-y-2 py-4 border-t border-slate-50">
                            <div class="flex items-center gap-3 text-xs text-slate-600">
                                <i class="bi bi-person-vcard text-blue-500"></i>
                                <span class="font-semibold">CIF: @emp.CIF</span>
                            </div>
                            <div class="flex items-center gap-3 text-xs text-slate-600">
                                <i class="bi bi-geo-alt text-blue-500"></i>
                                <span>@emp.Poblacion, @emp.Provincia</span>
                            </div>
                        </div>

                        <div class="flex gap-2 mt-4">
                            <button @onclick="() => AbrirModal(emp)" 
                                    class="flex-1 bg-slate-900 text-white py-2.5 rounded-lg font-bold text-[10px] tracking-widest uppercase hover:bg-blue-600 transition-colors">
                                <i class="bi bi-gear-wide-connected mr-2"></i> GESTIONAR
                            </button>
                            <button @onclick="() => ConfirmarEliminar(emp)" 
                                    class="px-3 bg-red-50 text-red-500 py-2.5 rounded-lg hover:bg-red-500 hover:text-white transition-all">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @* MODAL DE EDICIÓN LATERAL *@
    @if (mostrarModal)
    {
        <div class="fixed inset-0 bg-slate-950/60 backdrop-blur-sm z-50 flex justify-end">
            <div class="w-full max-w-xl bg-white h-full shadow-2xl flex flex-col animate-in fade-in slide-in-from-right duration-300">
                <div class="p-6 border-b border-slate-100 flex justify-between items-center bg-slate-50/50">
                    <div>
                        <h2 class="text-xl font-black text-slate-800">CONFIGURACIÓN FISCAL</h2>
                        <p class="text-[10px] text-slate-400 font-bold uppercase tracking-widest">Editor de Entidad Legal</p>
                    </div>
                    <button @onclick="CerrarModal" class="w-10 h-10 rounded-full hover:bg-white flex items-center justify-center text-slate-400 transition-colors">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>

                <div class="flex-1 overflow-y-auto p-8">
                    <EditForm Model="empresaEdicion" OnValidSubmit="GuardarEmpresa">
                        <DataAnnotationsValidator />
                        
                        <div class="space-y-8">
                            <section>
                                <h3 class="text-[11px] font-black text-blue-600 uppercase tracking-widest mb-4">Identidad de Marca</h3>
                                <div class="grid grid-cols-1 gap-4">
                                    <div class="bg-slate-50 p-4 rounded-2xl">
                                        <label class="block text-[10px] font-bold text-slate-400 uppercase mb-2">Nombre Comercial</label>
                                        <InputText @bind-Value="empresaEdicion.NombreComercial" class="w-full bg-transparent border-none p-0 text-slate-800 font-bold focus:ring-0" placeholder="Nombre que verán tus clientes" />
                                        <ValidationMessage For="@(() => empresaEdicion.NombreComercial)" />
                                    </div>
                                    <div class="grid grid-cols-2 gap-4">
                                        <div class="bg-slate-50 p-4 rounded-2xl">
                                            <label class="block text-[10px] font-bold text-slate-400 uppercase mb-2">Razón Social</label>
                                            <InputText @bind-Value="empresaEdicion.RazonSocial" class="w-full bg-transparent border-none p-0 text-sm" />
                                        </div>
                                        <div class="bg-slate-50 p-4 rounded-2xl">
                                            <label class="block text-[10px] font-bold text-slate-400 uppercase mb-2">CIF / NIF</label>
                                            <InputText @bind-Value="empresaEdicion.CIF" class="w-full bg-transparent border-none p-0 text-sm" />
                                        </div>
                                    </div>
                                </div>
                            </section>

                            @* Resto de secciones de personalización visual, ubicación y contacto *@
                            <section>
                                <h3 class="text-[11px] font-black text-blue-600 uppercase tracking-widest mb-4">Personalización Visual</h3>
                                <div class="grid grid-cols-2 gap-4">
                                    <div class="bg-slate-50 p-4 rounded-2xl">
                                        <label class="block text-[10px] font-bold text-slate-400 uppercase mb-2">Color (HEX)</label>
                                        <div class="flex items-center gap-3">
                                            <div class="w-6 h-6 rounded-full border border-white shadow-sm" style="background-color: @empresaEdicion.ColorHex"></div>
                                            <InputText @bind-Value="empresaEdicion.ColorHex" class="w-full bg-transparent border-none p-0 text-sm font-mono" />
                                        </div>
                                    </div>
                                    <div class="bg-slate-50 p-4 rounded-2xl">
                                        <label class="block text-[10px] font-bold text-slate-400 uppercase mb-2">URL del Logotipo</label>
                                        <InputText @bind-Value="empresaEdicion.LogoUrl" class="w-full bg-transparent border-none p-0 text-sm" placeholder="https://..." />
                                    </div>
                                </div>
                            </section>

                            <section>
                                <h3 class="text-[11px] font-black text-blue-600 uppercase tracking-widest mb-4">Ubicación y Contacto</h3>
                                <div class="space-y-4">
                                    <div class="bg-slate-50 p-4 rounded-2xl">
                                        <label class="block text-[10px] font-bold text-slate-400 uppercase mb-2">Dirección Fiscal Completa</label>
                                        <InputText @bind-Value="empresaEdicion.Direccion" class="w-full bg-transparent border-none p-0 text-sm" />
                                    </div>
                                    <div class="grid grid-cols-3 gap-4">
                                        <div class="bg-slate-50 p-4 rounded-2xl">
                                            <label class="block text-[10px] font-bold text-slate-400 uppercase mb-2">CP</label>
                                            <InputText @bind-Value="empresaEdicion.CodigoPostal" class="w-full bg-transparent border-none p-0 text-sm" />
                                        </div>
                                        <div class="bg-slate-50 p-4 rounded-2xl col-span-2">
                                            <label class="block text-[10px] font-bold text-slate-400 uppercase mb-2">Población / Provincia</label>
                                            <InputText @bind-Value="empresaEdicion.Poblacion" class="w-full bg-transparent border-none p-0 text-sm" />
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <div class="pt-10 pb-20">
                                <button type="submit" class="w-full bg-slate-900 text-white py-5 rounded-2xl font-black uppercase tracking-[0.2em] shadow-2xl shadow-slate-400 hover:bg-blue-600 transition-all duration-300">
                                    Sincronizar Datos
                                </button>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Empresa>? listaEmpresas;
    private Empresa empresaEdicion = new();
    private bool mostrarModal = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarEmpresas();
    }

    private async Task CargarEmpresas()
    {
        try 
        {
            // En WebAssembly, llamamos al endpoint del controlador en el API
            listaEmpresas = await Http.GetFromJsonAsync<List<Empresa>>("api/Empresas");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error de red: {ex.Message}");
        }
    }

    private void AbrirModal(Empresa emp)
    {
        empresaEdicion = emp;
        mostrarModal = true;
    }

    private void CerrarModal()
    {
        mostrarModal = false;
        empresaEdicion = new();
    }

    private async Task GuardarEmpresa()
    {
        try 
        {
            HttpResponseMessage response;
            
            if (empresaEdicion.Id == 0)
            {
                response = await Http.PostAsJsonAsync("api/Empresas", empresaEdicion);
            }
            else
            {
                response = await Http.PutAsJsonAsync($"api/Empresas/{empresaEdicion.Id}", empresaEdicion);
            }

            if (response.IsSuccessStatusCode)
            {
                await CargarEmpresas();
                CerrarModal();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("alert", $"Error del servidor: {error}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error de comunicación: {ex.Message}");
        }
    }

    private async Task ConfirmarEliminar(Empresa emp)
    {
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Eliminar {emp.NombreComercial}?");
        
        if (confirmado)
        {
            try 
            {
                var response = await Http.DeleteAsync($"api/Empresas/{emp.Id}");
                if (response.IsSuccessStatusCode)
                {
                    await CargarEmpresas();
                }
            }
            catch (Exception ex)
            {
                await JS.InvokeVoidAsync("alert", $"Error al eliminar: {ex.Message}");
            }
        }
    }
}