@page "/configuracion/seguridad"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Navigation

<div class="container-fluid p-4 animate__animated animate__fadeIn">
    @* --- CABECERA DE ALTO IMPACTO --- *@
    <div class="row align-items-center mb-5">
        <div class="col-md-7">
            <h1 class="fw-black text-white m-0 text-uppercase tracking-tighter" style="font-size: 2.5rem;">
                Control de <span class="text-primary-gradient">Identidades</span>
            </h1>
            <p class="text-muted text-uppercase small fw-bold tracking-widest mt-1">
                <i class="bi bi-shield-check me-2"></i>Gestión de privilegios y seguridad de capa 7
            </p>
        </div>
        <div class="col-md-5 text-end">
            <button class="btn btn-premium rounded-3 px-4 py-2 fw-bold text-uppercase" @onclick="MostrarModalNuevoUsuario">
                <i class="bi bi-person-plus-fill me-2"></i> Nuevo Operador
            </button>
        </div>
    </div>

    @* --- DASHBOARD DE ESTADOS --- *@
    <div class="row g-4 mb-5">
        @for (int i = 0; i < 4; i++) {
            <div class="col-md-3">
                <div class="card card-industrial-glass border-0 h-100 p-1">
                    <div class="card-body d-flex align-items-center">
                        <div class="icon-box-tech me-3">
                            <i class="bi bi-cpu fs-4"></i>
                        </div>
                        <div>
                            <span class="text-muted small fw-bold text-uppercase d-block tracking-wider">Sector @(i + 1)</span>
                            <span class="text-white fw-black h4 m-0">--</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @* --- TABLA EVOLUCIONADA --- *@
    <div class="row">
        <div class="col-12">
            <div class="glass-container">
                <div class="d-flex justify-content-between align-items-center p-4 border-bottom border-white border-opacity-10">
                    <h5 class="m-0 text-white fw-bold text-uppercase tracking-wider small">
                        <span class="status-dot-active me-2"></span> Registro de Operadores Activos
                    </h5>
                    <div class="search-wrapper">
                        <i class="bi bi-funnel me-2"></i>
                        <input type="text" @bind="searchTerm" @bind:event="oninput" placeholder="Filtrar por ID, Nombre..." class="search-input">
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-industrial mb-0">
                        <thead>
                            <tr>
                                <th class="ps-4">Identificación</th>
                                <th>Privilegios</th>
                                <th>Estado de Acceso</th>
                                <th>Conexión</th>
                                <th class="text-end pe-4">Comandos</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (listaUsuarios == null)
                            {
                                <tr>
                                    <td colspan="5" class="py-6 text-center">
                                        <div class="loading-data">
                                            <div class="scanner-line"></div>
                                            <span class="text-muted small tracking-widest text-uppercase">Escaneando Base de Datos...</span>
                                        </div>
                                    </td>
                                </tr>
                            }
                            else if (!UsuariosFiltrados.Any())
                            {
                                <tr>
                                    <td colspan="5" class="py-6">
                                        <div class="empty-state-tech text-center">
                                            <div class="empty-icon mb-3">
                                                <i class="bi bi-database-exclamation"></i>
                                            </div>
                                            <h4 class="text-white fw-bold">SIN REGISTROS ACTIVOS</h4>
                                            <p class="text-muted small mx-auto" style="max-width: 300px;">
                                                No se han detectado perfiles de seguridad con el criterio "@searchTerm".
                                            </p>
                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var user in UsuariosFiltrados)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold text-white text-uppercase">@user.Username</div>
                                            <div class="text-muted x-small">ID: @user.Id</div>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary-gradient-alt px-3 py-2 rounded-pill x-small fw-black text-uppercase">
                                                Acceso Nivel @(user.AccessLevel ?? 0)
                                            </span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="status-dot-active me-2"></span>
                                                <span class="text-white x-small fw-bold">EN LÍNEA</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-muted x-small font-mono">@(DateTime.Now.ToString("HH:mm:ss"))</span>
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="btn-group border border-white border-opacity-10 rounded-2 overflow-hidden">
                                                <button class="btn btn-dark btn-sm border-0" title="Editar"><i class="bi bi-pencil-square"></i></button>
                                                <button class="btn btn-dark btn-sm border-0 text-danger" title="Revocar"><i class="bi bi-shield-slash"></i></button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@* --- MODAL PREMIUM --- *@
@if (mostrarModal)
{
    <div class="modal-backdrop-blur"></div>
    <div class="modal fade show d-block animate__animated animate__fadeInUp" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content card-industrial-glass border-0">
                <div class="p-4 border-bottom border-white border-opacity-10 d-flex justify-content-between align-items-center">
                    <h5 class="text-white fw-black m-0 text-uppercase tracking-widest">Crear Credencial</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-4">
                        <label class="label-tech">Nombre de Usuario / Alias</label>
                        <input type="text" class="input-tech" placeholder="Introduzca alias...">
                    </div>
                    <div class="mb-4">
                        <label class="label-tech">Clave de Acceso Temporal</label>
                        <input type="password" class="input-tech" placeholder="********">
                    </div>
                    <button class="btn btn-premium w-100 py-3 fw-bold text-uppercase mt-2">Emitir Acceso</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    // Uso dynamic o objetos locales para evitar "meter con calzador" tipos no definidos
    // En el futuro puedes sustituir 'dynamic' por tu clase real (ej. ApplicationUser o Usuario)
    private List<dynamic>? listaUsuarios;
    private string searchTerm = "";
    private bool mostrarModal = false;

    private IEnumerable<dynamic> UsuariosFiltrados => 
        string.IsNullOrEmpty(searchTerm) 
        ? listaUsuarios ?? new List<dynamic>() 
        : (listaUsuarios?.Where(u => u.Username.ToString().Contains(searchTerm, StringComparison.OrdinalIgnoreCase)) ?? new List<dynamic>());

    protected override async Task OnInitializedAsync()
    {
        await CargarUsuarios();
    }

    private async Task CargarUsuarios()
    {
        try 
        {
            // Simulamos carga o apuntamos al endpoint genérico de tu CMS
            // listaUsuarios = await Http.GetFromJsonAsync<List<dynamic>>("api/Seguridad/Usuarios");
            
            // Ejemplo de carga local para que la tabla no nazca muerta mientras conectas tu API
            await Task.Delay(1000);
            listaUsuarios = new List<dynamic>
            {
                new { Id = 1, Username = "ADMIN_CENTRAL", AccessLevel = 99 },
                new { Id = 2, Username = "OPERADOR_ALMACEN", AccessLevel = 10 }
            };
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error de sincronización: {ex.Message}");
        }
    }

    private void MostrarModalNuevoUsuario() => mostrarModal = true;
    private void CerrarModal() => mostrarModal = false;
}

