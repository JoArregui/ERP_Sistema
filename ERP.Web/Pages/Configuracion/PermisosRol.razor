@page "/configuracion/seguridad/permisos/{RoleId}"
@using ERP.Domain.Dtos
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="container-fluid p-4 animate__animated animate__fadeIn">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/configuracion/seguridad">Seguridad</a></li>
            <li class="breadcrumb-item active">Matriz de Permisos</li>
        </ol>
    </nav>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-white py-3 border-bottom">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-shield-lock-fill me-2"></i>
                        Gestionar Permisos: @(model?.RoleName ?? "Cargando...")
                    </h5>
                    <small class="text-muted">Asigne los accesos granulares para este perfil</small>
                </div>
                <div class="col-auto">
                    <button class="btn btn-outline-secondary btn-sm me-2" @onclick='() => Navigation.NavigateTo("/configuracion/seguridad")'>
                        Cancelar
                    </button>
                    <button class="btn btn-primary btn-sm px-4 shadow-sm" @onclick="GuardarPermisos" disabled="@isSaving">
                        @if (isSaving) { <span class="spinner-border spinner-border-sm me-2"></span> }
                        else { <i class="bi bi-save2 me-1"></i> }
                        Guardar Cambios
                    </button>
                </div>
            </div>
        </div>

        <div class="card-body bg-light p-4">
            @if (model == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-grow text-primary" role="status"></div>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var grupo in model.Permissions.GroupBy(p => p.Group))
                    {
                        <div class="col-12 col-xl-4 col-md-6 mb-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-header bg-white border-0 py-3">
                                    <h6 class="fw-bold mb-0 text-dark">
                                        <i class="bi bi-folder-fill text-warning me-2"></i> @grupo.Key
                                    </h6>
                                </div>
                                <div class="card-body pt-0">
                                    <hr class="mt-0 mb-3 opacity-25">
                                    @foreach (var p in grupo)
                                    {
                                        <div class="d-flex align-items-center justify-content-between py-2 border-bottom border-light">
                                            <div>
                                                <div class="fw-semibold small">@p.Description</div>
                                                <code class="x-small text-muted">@p.Value</code>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input custom-switch" type="checkbox" @bind="p.IsSelected">
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .custom-switch { width: 3rem !important; height: 1.5rem !important; cursor: pointer; }
    .x-small { font-size: 0.75rem; }
    .card { transition: transform 0.2s ease; }
    .card:hover { transform: translateY(-2px); }
</style>

@code {
    [Parameter] public string RoleId { get; set; } = string.Empty;
    private RolePermissionDto? model;
    private bool isSaving = false;

    protected override async Task OnInitializedAsync() => await CargarPermisos();

    private async Task CargarPermisos() {
        try { model = await Http.GetFromJsonAsync<RolePermissionDto>($"api/users/roles/{RoleId}/permissions"); }
        catch (Exception ex) { Console.WriteLine(ex.Message); }
    }

    private async Task GuardarPermisos() {
        if (model == null) return;
        isSaving = true;
        try {
            var response = await Http.PostAsJsonAsync("api/users/roles/permissions", model);
            if (response.IsSuccessStatusCode) {
                await JS.InvokeVoidAsync("alert", "Configuraci√≥n actualizada.");
                Navigation.NavigateTo("/configuracion/seguridad");
            }
        } finally { isSaving = false; }
    }
}