@page "/agenda"
@using Microsoft.AspNetCore.Components.Routing
@using System.Globalization

<div class="max-w-[1200px] mx-auto p-8 animate-in fade-in duration-500">
    
    @* --- CABECERA DE AGENDA --- *@
    <div class="flex justify-between items-end mb-8 border-b-2 border-slate-200 pb-6">
        <div>
            <h1 class="text-4xl font-black text-slate-900 uppercase tracking-tighter">Mi Agenda</h1>
            @* Usamos la variable pre-formateada para evitar errores de renderizado de literales *@
            <p class="text-slate-500 font-bold italic">@FechaFormateada</p>
        </div>
        <div class="flex gap-2">
            <button @onclick="AbrirModal" class="bg-blue-600 text-white px-6 py-2 rounded-xl font-black text-[10px] hover:bg-blue-700 transition shadow-lg shadow-blue-200 uppercase flex items-center gap-2">
                <i class="bi bi-plus-lg"></i> Nueva Tarea
            </button>
            <NavLink href="" class="bg-slate-200 text-slate-700 px-6 py-2 rounded-xl font-black text-[10px] no-underline uppercase hover:bg-slate-300 transition flex items-center gap-2">
                <i class="bi bi-arrow-left"></i> Escritorio
            </NavLink>
        </div>
    </div>

    @* --- FILTROS RÁPIDOS --- *@
    <div class="flex gap-4 mb-6">
        <button @onclick='() => filtroActual = "Todas"' 
                class="@(filtroActual == "Todas" ? "bg-slate-900 text-white shadow-lg shadow-slate-900/20" : "bg-white text-slate-500 border border-slate-300") px-5 py-1.5 rounded-full text-[10px] font-black uppercase transition-all">
            <i class="bi bi-list-task mr-1"></i> Todas
        </button>
        <button @onclick='() => filtroActual = "Pendientes"' 
                class="@(filtroActual == "Pendientes" ? "bg-orange-500 text-white shadow-lg shadow-orange-500/20" : "bg-white text-slate-500 border border-slate-300") px-5 py-1.5 rounded-full text-[10px] font-black uppercase transition-all">
            <i class="bi bi-clock-history mr-1"></i> Pendientes
        </button>
        <button @onclick='() => filtroActual = "Completadas"' 
                class="@(filtroActual == "Completadas" ? "bg-green-600 text-white shadow-lg shadow-green-600/20" : "bg-white text-slate-500 border border-slate-300") px-5 py-1.5 rounded-full text-[10px] font-black uppercase transition-all">
            <i class="bi bi-check-circle-fill mr-1"></i> Hechas
        </button>
    </div>

    @* --- TABLA DE TAREAS --- *@
    <div class="bg-white rounded-[2rem] shadow-xl border border-slate-100 overflow-hidden">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-slate-50 text-slate-400 text-[10px] font-black uppercase tracking-widest border-b border-slate-100">
                    <th class="p-5">Hora</th>
                    <th class="p-5">Tarea / Actividad</th>
                    <th class="p-5">Prioridad</th>
                    <th class="p-5">Estado</th>
                    <th class="p-5 text-right">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                @foreach (var tarea in TareasFiltradas)
                {
                    <tr class="hover:bg-blue-50/30 transition-colors cursor-default group">
                        <td class="p-5 font-mono font-bold text-blue-600 text-sm">@tarea.Hora</td>
                        <td class="p-5">
                            <div class="font-black text-slate-800 uppercase text-sm @(tarea.Completada ? "line-through opacity-40" : "")">
                                @tarea.Titulo
                            </div>
                            <div class="text-[11px] text-slate-400 italic font-medium">@tarea.Descripcion</div>
                        </td>
                        <td class="p-5">
                            @if (tarea.Prioridad == "ALTA")
                            {
                                <span class="bg-rose-100 text-rose-700 px-3 py-1 rounded-lg text-[9px] font-black border border-rose-200">ALTA</span>
                            }
                            else
                            {
                                <span class="bg-slate-100 text-slate-500 px-3 py-1 rounded-lg text-[9px] font-black border border-slate-200">MEDIA</span>
                            }
                        </td>
                        <td class="p-5">
                            <button @onclick="() => tarea.Completada = !tarea.Completada" class="flex items-center gap-2 group">
                                <div class="w-4 h-4 rounded-md border-2 transition-all flex items-center justify-center @(tarea.Completada ? "bg-green-500 border-green-600 shadow-sm" : "bg-white border-slate-200 group-hover:border-blue-400")">
                                    @if(tarea.Completada) { <i class="bi bi-check text-white text-xs"></i> }
                                </div>
                                <span class="text-[10px] font-black text-slate-500 uppercase group-hover:text-slate-800">@(tarea.Completada ? "Completado" : "Marcar hecho")</span>
                            </button>
                        </td>
                        <td class="p-5 text-right opacity-0 group-hover:opacity-100 transition-opacity">
                            <button class="text-blue-600 p-2 hover:bg-blue-100 rounded-lg transition-colors">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button @onclick="() => BorrarTarea(tarea)" class="text-rose-400 p-2 hover:bg-rose-100 rounded-lg transition-colors ml-1">
                                <i class="bi bi-trash3-fill"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        @if (!TareasFiltradas.Any())
        {
            <div class="p-16 text-center">
                <i class="bi bi-clipboard-x text-5xl text-slate-200 mb-4 block"></i>
                <p class="text-slate-400 italic text-sm font-medium">No hay tareas registradas en esta sección.</p>
            </div>
        }
    </div>
</div>

@code {
    public class Tarea {
        public string Hora { get; set; } = string.Empty;
        public string Titulo { get; set; } = string.Empty;
        public string Descripcion { get; set; } = string.Empty;
        public string Prioridad { get; set; } = "MEDIA";
        public bool Completada { get; set; }
    }

    private string filtroActual = "Todas";

    // Formateo de fecha robusto para evitar errores de interpretación de literales en el HTML
    private string FechaFormateada => DateTime.Now.ToString("dddd, dd 'de' MMMM 'de' yyyy", new CultureInfo("es-ES"));

    private List<Tarea> tareas = new List<Tarea> {
        new Tarea { Hora = "09:00", Titulo = "Revisión Facturas", Descripcion = "Repasar documentos pendientes de IVA", Prioridad = "ALTA", Completada = true },
        new Tarea { Hora = "11:30", Titulo = "Llamar a Arandina", Descripcion = "Confirmar pedido de materiales", Prioridad = "MEDIA", Completada = false },
        new Tarea { Hora = "13:00", Titulo = "Cierre de Caja", Descripcion = "Verificar cobros del turno de mañana", Prioridad = "ALTA", Completada = false },
        new Tarea { Hora = "16:45", Titulo = "Reunión Logística", Descripcion = "Organizar rutas de reparto semana próxima", Prioridad = "MEDIA", Completada = false }
    };

    private IEnumerable<Tarea> TareasFiltradas => filtroActual switch
    {
        "Pendientes" => tareas.Where(t => !t.Completada),
        "Completadas" => tareas.Where(t => t.Completada),
        _ => tareas
    };

    private void AbrirModal() {
        // Implementación futura del modal de creación
    }

    private void BorrarTarea(Tarea t) {
        tareas.Remove(t);
    }
}