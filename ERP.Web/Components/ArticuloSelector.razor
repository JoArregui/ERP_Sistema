@using ERP.Domain.Entities
@using ERP.Web.Services
@inject HttpClient Http
@inject NotificationService NotificationService

<div class="bg-white rounded-2xl shadow-xl border border-slate-200 overflow-hidden">
    <div class="p-6 border-b border-slate-100 bg-slate-50/50">
        <label class="block text-xs font-bold text-slate-500 uppercase tracking-widest mb-2">Buscador de Catálogo</label>
        <div class="relative">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </span>
            <input type="text" 
                   class="block w-full pl-10 pr-4 py-3 bg-white border border-slate-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all shadow-sm"
                   placeholder="Buscar por código o descripción..."
                   @bind="SearchTerm" 
                   @bind:event="oninput">
        </div>
    </div>

    <div class="max-h-[450px] overflow-y-auto">
        <table class="min-w-full divide-y divide-slate-100">
            <thead class="bg-white sticky top-0 z-10 shadow-sm">
                <tr>
                    <th class="px-6 py-3 text-left text-[10px] font-bold text-slate-400 uppercase">Artículo</th>
                    <th class="px-6 py-3 text-center text-[10px] font-bold text-slate-400 uppercase">Stock</th>
                    <th class="px-6 py-3 text-right text-[10px] font-bold text-slate-400 uppercase">PVP</th>
                    <th class="px-6 py-3 text-right text-[10px] font-bold text-slate-400 uppercase"></th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-50">
                @if (ArticulosFiltrados == null || !ArticulosFiltrados.Any())
                {
                    <tr>
                        <td colspan="4" class="px-6 py-12 text-center">
                            <p class="text-slate-400 text-sm italic">@(string.IsNullOrWhiteSpace(SearchTerm) ? "Escriba para filtrar catálogo..." : "No hay coincidencias")</p>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var art in ArticulosFiltrados)
                    {
                        <tr class="hover:bg-blue-50/50 transition-colors group">
                            <td class="px-6 py-4">
                                <div class="text-sm font-bold text-slate-800">@art.Descripcion</div>
                                <div class="text-[10px] font-mono text-blue-500 font-bold uppercase">@art.Codigo</div>
                            </td>
                            <td class="px-6 py-4 text-center">
                                <span class="px-2 py-1 rounded text-[10px] font-bold @(art.Stock > 0 ? "bg-emerald-100 text-emerald-700" : "bg-rose-100 text-rose-700")">
                                    @art.Stock.ToString("N2")
                                </span>
                            </td>
                            <td class="px-6 py-4 text-right text-sm font-black text-slate-700">
                                @art.PrecioVenta.ToString("N2")€
                            </td>
                            <td class="px-6 py-4 text-right">
                                <button @onclick="() => Seleccionar(art)" 
                                        class="p-2 bg-slate-100 text-slate-600 rounded-lg hover:bg-blue-600 hover:text-white transition-all shadow-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    [Parameter] public EventCallback<Articulo> OnArticuloSeleccionado { get; set; }

    private List<Articulo> TodosLosArticulos = new();
    private List<Articulo> ArticulosFiltrados = new();
    private string _searchTerm = "";

    public string SearchTerm
    {
        get => _searchTerm;
        set { _searchTerm = value; Filtrar(); }
    }

    protected override async Task OnInitializedAsync()
    {
        try {
            TodosLosArticulos = await Http.GetFromJsonAsync<List<Articulo>>("api/articulos") ?? new();
        } catch {
            NotificationService.ShowNotification("Error al cargar artículos", NotificationType.Error);
        }
    }

    private void Filtrar()
    {
        if (string.IsNullOrWhiteSpace(SearchTerm)) {
            ArticulosFiltrados = new();
        } else {
            var term = SearchTerm.ToLower();
            ArticulosFiltrados = TodosLosArticulos
                .Where(a => a.Descripcion.ToLower().Contains(term) || a.Codigo.ToLower().Contains(term))
                .Take(15).ToList();
        }
    }

    private async Task Seleccionar(Articulo art)
    {
        await OnArticuloSeleccionado.InvokeAsync(art);
    }
}